{
    "ComponentName": "ProgressMainTable",
    "BlockType": "table",
    "TableOptions": {
        "ItemsSource": "<itemsource>",
        "Limit": "{g6}",
        "IndexStart": "{SessisonStartPos, Converter=NumberSubtract, Parameter=1}",
        "RowSpacing": 30,
        "HeaderTemplate": {
            "BlockType": "text",
            "MarginBottom": 50,
            "Height": 175,
            "Style": "TableSessionHeader"
        },
        "Columns": [
            {
                "Header": "",
                "Template": {
                    "RenderIf": "{RacePosJump}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionFG}",
                            "font": "{FontNameItalic}",
                            "w": "45",
                            "pad": "12,0",
                            "source": "{Item.Position}"
                        }
                    }
                }
            },
            {
                "Header": "",
                "Template": {
                    "BlockType": "component",
                    "Component": "PositionJump",
                    "ComponentOptions": {
                        "Vars": {
                            "source0": "arrows/arrow.up.png",
                            "source1": "arrows/equal.png",
                            "source2": "arrows/arrow.down.png"
                        }
                    }
                }
            },
            {
                "Header": "",
                "Template": {
                    "RenderIf": "<driverline>",
                    "BlockType": "component",
                    "Component": "V1DriverLine",
                    "ComponentOptions": {
                        "Vars": {
                            "style1": "FirstNameDefault",
                            "style2": "SecondNameDefault",
                            "width": "{DriverWidth}"
                        }
                    }
                }
            },
            {
                "Header": "",
                "Template": {
                    "BlockType": "component",
                    "Component": "V1TeamLine",
                    "ComponentOptions": {
                        "Vars": {
                            "bg": "00000000",
                            "teamstyle": "TeamDefault"
                        }
                    }
                }
            },
            {
                "Header": "[POINTS]",
                "Template": {
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{PointsFG}",
                            "font": "{FontNameBold}",
                            "w": "60",
                            "pad": "40,0",
                            "source": "{Item.Points}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.Points.IntValue, Converter=NumberEquals, Parameter=0}",
                            "ComponentVar": "source",
                            "Value": "0"
                        }
                    ]
                }
            },
            {
                "Header": "[GAIN]",
                "Template": {
                    "RenderIf": "{StaGain}",
                    "BlockType": "itemstack",
                    "ItemStackOptions": {
                        "ItemSource": "{Item.Events}",
                        "Limit": 1,
                        "IndexStart": "{Season.SeasonCurrentNumberEventExcludingNonChampionship}",
                        "ItemTemplate": {
                            "BlockType": "component",
                            "Component": "MainColumn",
                            "ComponentOptions": {
                                "Vars": {
                                    "style": "P1Default",
                                    "fg": "{PointsFG}",
                                    "font": "{FontNameBold}",
                                    "w": "50",
                                    "pad": "40,0",
                                    "source": "+{Item.Points}"
                                }
                            },
                            "Triggers": [
                                {
                                    "Condition": "{Item.Points.IntValue, Converter=StringEquals, Parameter=0}",
                                    "Property": "Opacity",
                                    "Value": 0
                                }
                            ]
                        }
                    }
                }
            },
            {
                "Header": "[INT.]",
                "Template": {
                    "RenderIf": "{StaInterval}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionFG}",
                            "font": "{FontNameItalic}",
                            "w": "90",
                            "pad": "10,0",
                            "source": "+{Item.PointsToAboveDiff}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.PointsToAboveDiff.IntValue, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        }
                    ]
                }
            },
            {
                "Header": "[GAP]",
                "Template": {
                    "RenderIf": "{sta4}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionFG}",
                            "font": "{FontNameItalic}",
                            "w": "90",
                            "pad": "10,0",
                            "source": "+{Item.PointsToLeaderDiff}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.PointsToLeaderDiff.IntValue, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        }
                    ]
                }
            },
            {
                "MultiColumnHeadersSource": "{Standings.Events}",
                "MultiColumnItemsSource": "{Item.Events}",
                "HorizontalAlignment": "Center",
                "MultiColumnHeaderTemplate": {
                    "BlockType": "stack",
                    "Orientation": "Vertical",
                    "HorizontalAlignment": "Center",
                    "Items": [
                        {
                            "BlockType": "image",
                            "Padding": "1,-12",
                            "Background": "{Black}",
                            "MarginBottom": 16,
                            "Source": "{Item.Track.Nation.LogotypePath}",
                            "HorizontalAlignment": "Center",
                            "Width": 80,
                            "Height": 80
                        },
                        {
                            "BlockType": "text",
                            "HorizontalAlignment": "Center",
                            "Source": "{Item.Track.Nation.Code}",
                            "FontSize": 30,
                            "Foreground": "{White}"
                        }
                    ]
                },
                "Template": {
                    "BlockType": "dock",
                    "RenderIf": "{StaProgress, Converter=StringNotEquals, Parameter=Do Not Render Progress}",
                    "HorizontalAlignment": "Center",
                    "Items": [
                        {
                            "RenderIf": "{Item.Event.WinnerString, Converter=EmptyObjectToFalse}",
                            "Margin": "10,12,0,0",
                            "Padding": "20, 0",
                            "Width": 50,
                            "BlockType": "text",
                            "Source": "{Item.{StaProgress}String}",
                            "HorizontalAlignment": "Center",
                            "TextOptions": {
                                "FontName": "{FontNameDefault}",
                                "FontSize": 30,
                                "HorizontalAlignment": "Center",
                                "Foreground": "{SessionFG}"
                            },
                            "Triggers": [
                                {
                                    "Condition": "{Item.Points.IntValue, Converter=NumberEquals, Parameter=0}",
                                    "ConditionAnd": "{StaProgress, Converter=StringEquals, Parameter=Points}",
                                    "Property": "Opacity",
                                    "Value": 0
                                },
                                {
                                    "Condition": "{StaProgress, Converter=StringEquals, Parameter=Position}",
                                    "Property": "Source",
                                    "Value": "{Item.RaceMajorPositionString}"
                                },
                                {
                                    "Condition": "{Item.RaceMajorPositionString, Converter=StringEquals, Parameter=DNF}",
                                    "Property": "FontSize",
                                    "Value": 28
                                },
                                {
                                    "Condition": "{Item.RaceMajorPositionString, Converter=EmptyObjectToTrue}",
                                    "Setters": [
                                        {
                                            "Property": "Source",
                                            "Value": "DNS"
                                        },
                                        {
                                            "Property": "FontSize",
                                            "Value": 28
                                        }
                                    ]
                                },
                                {
                                    "Condition": "{Item.RaceMajorPositionString, Converter=StringEquals, Parameter=1}",
                                    "Property": "Foreground",
                                    "Value": "{CountP1}"
                                },
                                {
                                    "Condition": "{Item.RaceMajorPositionString, Converter=StringEquals, Parameter=2}",
                                    "Property": "Foreground",
                                    "Value": "{CountP2}"
                                },
                                {
                                    "Condition": "{Item.RaceMajorPositionString, Converter=StringEquals, Parameter=3}",
                                    "Property": "Foreground",
                                    "Value": "{CountP3}"
                                }
                            ]
                        }
                    ]
                }
            },
            {
                "Header": "[P1]",
                "Template": {
                    "RenderIf": "{sta5}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionFG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "20,0",
                            "source": "{Item.CountP1}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.CountP1, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        },
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{CountP1}"
                        }
                    ]
                }
            },
            {
                "Header": "[P2]",
                "Template": {
                    "RenderIf": "{sta5}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionFG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "20,0",
                            "source": "{Item.CountP2}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.CountP2, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        },
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{CountP2}"
                        }
                    ]
                }
            },
            {
                "Header": "[P3]",
                "Template": {
                    "RenderIf": "{sta5}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionFG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "20,0",
                            "source": "{Item.CountP3}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.CountP3, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        },
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{CountP3}"
                        }
                    ]
                }
            },
            {
                "Header": "[TOP 5]",
                "Template": {
                    "RenderIf": "{StaTop5}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionFG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "40,0",
                            "source": "{Item.CountTop5}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.CountTop5, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        },
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{CountTop5}"
                        }
                    ]
                }
            },
            {
                "Header": "[TOP 10]",
                "Template": {
                    "RenderIf": "{sta6}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionFG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "40,0",
                            "source": "{Item.CountTop10}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.CountTop10, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        },
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{CountTop10}"
                        }
                    ]
                }
            },
            {
                "Header": "[BEST]",
                "Template": {
                    "RenderIf": "{StaBest}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionFG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "40,0",
                            "source": "{Item.BestPos1}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.BestPos1, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        },
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{BestPos1}"
                        }
                    ]
                }
            },
            {
                "Header": "[BEST Q]",
                "Template": {
                    "RenderIf": "{StaBestQ}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionFG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "50,0",
                            "source": "{Item.BestPosQual}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.BestPosQual, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        },
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{BestPosQual}"
                        }
                    ]
                }
            },
            {
                "Header": "[DOTD]",
                "Template": {
                    "RenderIf": "{sta9}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionFG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "40,0",
                            "source": "{Item.RaceDriverDayCount}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.RaceDriverDayCount, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        },
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{RaceDriverDayCount}"
                        }
                    ]
                }
            },
            {
                "Header": "[FL]",
                "Template": {
                    "RenderIf": "{sta7}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionFG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "20,0",
                            "source": "{Item.RaceFastestLapCount}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.RaceFastestLapCount, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        },
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{RaceFastestLapCount}"
                        }
                    ]
                }
            },
            {
                "Header": "[POLE]",
                "Template": {
                    "RenderIf": "{sta8}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionFG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "40,0",
                            "source": "{Item.CountQualP1}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.CountQualP1, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        },
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{CountQualP1}"
                        }
                    ]
                }
            },
            {
                "Header": "[PP]",
                "Template": {
                    "RenderIf": "{sta10}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionFG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "20,0",
                            "source": "{Item.PenaltyPoints}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.PenaltyPoints, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        },
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{PenaltyPoints}"
                        }
                    ]
                }
            },
            {
                "Header": "[DNF]",
                "Template": {
                    "RenderIf": "{sta11}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionFG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "30,0",
                            "source": "{Item.CountDnf}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.CountDnf, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        },
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{CountDnf}"
                        }
                    ]
                }
            },
            {
                "Header": "[EVENTS]",
                "Template": {
                    "RenderIf": "{StaEvents}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionFG}",
                            "font": "{FontNameItalic}",
                            "w": "60",
                            "pad": "42,0",
                            "source": "{Item.EventsCount}"
                        }
                    }
                }
            }
        ]
    }
}