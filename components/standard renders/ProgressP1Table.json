{
    "ComponentName": "ProgressP1Table",
    "BlockType": "table",
    "BackgroundImage": "bg/bg.p1.bar.png",
    "ColorizeBackground": {
        "Enabled": true,
        "Color": "{Season.MainLeagueCategory.SecondaryColor}"
    },
    "TableOptions": {
        "ItemsSource": "<itemsource>",
        "Limit": 1,
        "HeaderTemplate": {
            "BlockType": "text",
            "Style": "TableSessionHeader"
        },
        "Columns": [
            {
                "Header": "",
                "Template": {
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionP1FG}",
                            "font": "{FontNameItalic}",
                            "w": "45",
                            "pad": "12,0",
                            "source": "{Item.Position}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{sta14}",
                            "ComponentVar": "source",
                            "Value": "[c]"
                        }
                    ]
                }
            },
            {
                "Header": "",
                "Template": {
                    "RenderIf": "{StaPosJump}",
                    "BlockType": "component",
                    "Component": "PositionJump",
                    "ComponentOptions": {
                        "Vars": {
                            "source0": "arrows/arrow.up.dark.png",
                            "source1": "arrows/equal.dark.png",
                            "source2": "arrows/arrow.down.dark.png"
                        }
                    }
                }
            },
            {
                "Header": "",
                "Template": {
                    "RenderIf": "<driverline>",
                    "BlockType": "component",
                    "Component": "V1DriverLine",
                    "ComponentOptions": {
                        "Vars": {
                            "style1": "P1FirstNameDefault",
                            "style2": "P1SecondNameDefault",
                            "width": "{DriverWidth}"
                        }
                    }
                }
            },
            {
                "Header": "",
                "Template": {
                    "BlockType": "component",
                    "Component": "V1TeamLine",
                    "ComponentOptions": {
                        "Vars": {
                            "bg": "{Item.Team.Color}",
                            "teamstyle": "P1TeamDefault"
                        }
                    }
                }
            },
            {
                "Header": "",
                "Template": {
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionP1FG}",
                            "font": "{FontNameBold}",
                            "w": "100",
                            "pad": "20,0",
                            "source": "{Item.Points}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.Points.IntValue, Converter=NumberEquals, Parameter=0}",
                            "ComponentVar": "source",
                            "Value": "0"
                        }
                    ]
                }
            },
            {
                "Header": "",
                "Template": {
                    "RenderIf": "{StaGain}",
                    "BlockType": "itemstack",
                    "ItemStackOptions": {
                        "ItemSource": "{Item.Events}",
                        "Limit": 1,
                        "IndexStart": "{Season.SeasonCurrentNumberEventExcludingNonChampionship, Converter=NumberSubtract, Parameter=1}",
                        "ItemTemplate": {
                            "BlockType": "component",
                            "Component": "MainColumn",
                            "ComponentOptions": {
                                "Vars": {
                                    "style": "P1Default",
                                    "fg": "{SessionP1FG}",
                                    "font": "{FontNameBold}",
                                    "w": "70",
                                    "pad": "20,0",
                                    "source": "+{Item.Points}"
                                }
                            },
                            "Triggers": [
                                {
                                    "Condition": "{Item.Points.IntValue, Converter=StringEquals, Parameter=0}",
                                    "Property": "Opacity",
                                    "Value": 0
                                }
                            ]
                        }
                    }
                }
            },
            {
                "Header": "",
                "Template": {
                    "Opacity": 0,
                    "RenderIf": "{StaInterval}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionP1FG}",
                            "font": "{FontNameItalic}",
                            "w": "110",
                            "pad": "10,0",
                            "source": "+{Item.PointsToAboveDiff}"
                        }
                    }
                }
            },
            {
                "Header": "",
                "Template": {
                    "Opacity": 0,
                    "RenderIf": "{sta4}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionP1FG}",
                            "font": "{FontNameItalic}",
                            "w": "110",
                            "pad": "10,0",
                            "source": "+{Item.PointsToLeaderDiff}"
                        }
                    }
                }
            },
            {
                "MultiColumnHeadersSource": "{Standings.Events}",
                "MultiColumnItemsSource": "{Item.Events}",
                "HorizontalAlignment": "Center",
                "Template": {
                    "BlockType": "stack",
                    "HorizontalAlignment": "Center",
                    "Items": [
                        {
                            "RenderIf": "{Item.Event.WinnerString, Converter=EmptyObjectToFalse}",
                            "Margin": "10,12,0,0",
                            "Padding": "5,0",
                            "Width": 80,
                            "BlockType": "text",
                            "Source": "{Item.{StaProgress}.StringValue}",
                            "HorizontalAlignment": "Center",
                            "TextOptions": {
                                "FontName": "{FontNameItalic}",
                                "FontSize": 30,
                                "HorizontalAlignment": "Center",
                                "Foreground": "{SessionP1FG}"
                            },
                            "Triggers": [
                                {
                                    "Condition": "{Item.Points.StringValue, Converter=StringEquals, Parameter=0}",
                                    "ConditionAnd": "{StaProgress, Converter=StringEquals, Parameter=Points}",
                                    "Property": "Opacity",
                                    "Value": 0
                                },
                                {
                                    "Condition": "{StaProgress, Converter=StringEquals, Parameter=Position}",
                                    "Property": "Source",
                                    "Value": "{Item.RaceMajorPositionString}"
                                },
                                {
                                    "Condition": "{Item.RaceMajorPositionString, Converter=StringEquals, Parameter=DNF}",
                                    "Property": "FontSize",
                                    "Value": 28
                                },
                                {
                                    "Condition": "{Item.RaceMajorPositionString, Converter=EmptyObjectToTrue}",
                                    "ConditionAnd": "{StaProgress, Converter=StringNotEquals, Parameter=Points}",
                                    "Setters": [
                                        {
                                            "Property": "Source",
                                            "Value": "DNS"
                                        },
                                        {
                                            "Property": "FontSize",
                                            "Value": 28
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            },
            {
                "Header": "",
                "Template": {
                    "RenderIf": "{sta5}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionP1FG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "20,0",
                            "source": "{Item.CountP1}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.CountP1, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        }
                    ]
                }
            },
            {
                "Header": "",
                "Template": {
                    "RenderIf": "{sta5}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
