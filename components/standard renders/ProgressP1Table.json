                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionP1FG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "40,0",
                            "source": "{Item.CountTop5}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.CountTop5, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        }
                    ]
                }
            },
            {
                "Header": "",
                "Template": {
                    "RenderIf": "{sta6}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionP1FG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "40,0",
                            "source": "{Item.CountTop10}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.CountTop10, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        }
                    ]
                }
            },
            {
                "Header": "",
                "Template": {
                    "RenderIf": "{StaBest}",
