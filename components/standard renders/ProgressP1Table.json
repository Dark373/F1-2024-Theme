                        }
                    ]
                }
            },
            {
                "Header": "",
                "Template": {
                    "RenderIf": "{sta8}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionP1FG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "40,0",
                            "source": "{Item.CountQualP1}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.CountQualP1, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        }
                    ]
                }
            },
            {
                "Header": "",
                "Template": {
                    "RenderIf": "{sta10}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionP1FG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "20,0",
                            "source": "{Item.PenaltyPoints}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.PenaltyPoints, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        }
                    ]
                }
            },
            {
                "Header": "",
                "Template": {
                    "RenderIf": "{sta11}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionP1FG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "30,0",
                            "source": "{Item.CountDnf}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.CountDnf, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        }
                    ]
                }
            },
            {
                "Header": "",
                "Template": {
                    "RenderIf": "{StaEvents}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionP1FG}",
                            "font": "{FontNameItalic}",
                            "w": "60",
                            "pad": "42,0",
                            "source": "{Item.EventsCount}"
                        }
                    }
                }
            }
        ]
    }
}