                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionP1FG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "20,0",
                            "source": "{Item.CountP3}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.CountP3, Converter=NumberEquals, Parameter=0}",
