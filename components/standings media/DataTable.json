{
    "ComponentName": "DataTable",
    "BlockType": "table",
    "MarginLeft": 68,
    "HorizontalAlignment": "Center",
    "VerticalAlignment": "Center",
    "TableOptions": {
        "ItemsSource": "<source>",
        "Limit": "{g6}",
        "IndexStart": "{g7, Converter=NumberSubtract, Parameter=1}",
        "HeaderTemplate": {
            "BlockType": "text",
            "Style": "HeaderStyle"
        },
        "Columns": [
            {
                "Header": "[{sta3}]",
                "Template": {
                    "BlockType": "component",
                    "Component": "<LDT>",
                    "ComponentOptions": {
                        "Vars": {
                            "source": "+{Item.{sta3}}",
                            "w": 290
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{sta3, Converter=StringEquals, Parameter=PointsToLeaderDiff}",
                            "ComponentVar": "w",
                            "Value": 260
                        },
                        {
                            "Condition": "{Item.PointsToLeaderDiff.IntValue, Converter=NumberEquals, Parameter=0}",
                            "ConditionOr": "{Item.PointsToAboveDiff.IntValue, Converter=NumberEquals, Parameter=0}",
                            "ComponentVar": "source",
                            "Value": "+0"
                        },
                        {
                            "Condition": "{Item.Position, Converter=NumberEquals, Parameter=1}",
                            "ComponentVar": "source",
                            "Value": ""
                        }
                    ]
                }
            },
            {
                "Header": "[GAP]",
                "Template": {
                    "RenderIf": "{sta4}",
                    "BlockType": "component",
                    "Component": "DataTableColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "source": "+{Item.PointsToLeaderDiff}",
                            "w": 290,
                            "fg": "{Col2FG}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.PointsToLeaderDiff.IntValue, Converter=NumberEquals, Parameter=0}",
                            "ComponentVar": "source",
                            "Value": "+0"
                        },
                        {
                            "Condition": "{Item.Position, Converter=NumberEquals, Parameter=1}",
                            "ComponentVar": "source",
                            "Value": ""
                        }
                    ]
                }
            },
            {
                "MultiColumnHeadersSource": "{Standings.Events}",
                "MultiColumnItemsSource": "{Item.Events}",
                "HorizontalAlignment": "Center",
                "MultiColumnHeaderTemplate": {
                    "BlockType": "stack",
                    "Orientation": "Vertical",
                    "HorizontalAlignment": "Center",
                    "Items": [
                        {
                            "BlockType": "image",
                            "Padding": "1,-29",
                            "Background": "{Black}",
                            "MarginBottom": 16,
                            "Source": "{Item.Track.Nation.LogotypePath}",
                            "HorizontalAlignment": "Center",
                            "Width": 180,
                            "Height": 180
                        },
                        {
                            "BlockType": "text",
                            "HorizontalAlignment": "Center",
                            "Source": "{Item.Track.Nation.Code}",
                            "FontSize": 50,
                            "Foreground": "{{g1}}"
                        }
                    ]
                },
                "Template": {
                    "BlockType": "stack",
                    "RenderIf": "{StaProgress, Converter=StringNotEquals, Parameter=Do Not Render Progress}",
                    "Orientation": "Vertical",
                    "HorizontalAlignment": "Center",
                    "Items": [
                        {
                            "BlockType": "stack",
                            "Margin": "0,6,0,0",
                            "HorizontalAlignment": "Center",
                            "Items": [
                                {
                                    "RenderIf": "{Item.Event.WinnerString, Converter=EmptyObjectToFalse}",
                                    "BlockType": "text",
                                    "Source": "{Item.{StaProgress}.StringValue}",
                                    "Style": "NameBlackDataTable",
                                    "Width": 220,
                                    "Height": 188,
                                    "Foreground": "{Black}",
                                    "Triggers": [
                                        {
                                            "Condition": "{Item.Points.StringValue, Converter=StringEquals, Parameter=0}",
                                            "ConditionAnd": "{StaProgress, Converter=StringEquals, Parameter=Points}",
                                            "Property": "Opacity",
                                            "Value": 0
                                        },
                                        {
                                            "Condition": "{StaProgress, Converter=StringEquals, Parameter=Position}",
                                            "Property": "Source",
                                            "Value": "{Item.RaceMajorPositionString}"
                                        },
                                        {
                                            "Condition": "{Item.RaceMajorPositionString, Converter=StringEquals, Parameter=DNF}",
                                            "Property": "FontSize",
                                            "Value": 28
                                        },
                                        {
                                            "Condition": "{Item.RaceMajorPositionString, Converter=StringEquals, Parameter=1}",
                                            "ConditionAnd": "{StaColouredText}",
                                            "Property": "Foreground",
                                            "Value": "{P1FG}"
                                        },
                                        {
                                            "Condition": "{Item.RaceMajorPositionString, Converter=StringEquals, Parameter=2}",
                                            "ConditionAnd": "{StaColouredText}",
                                            "Property": "Foreground",
                                            "Value": "{P2FG}"
                                        },
                                        {
                                            "Condition": "{Item.RaceMajorPositionString, Converter=StringEquals, Parameter=3}",
                                            "ConditionAnd": "{StaColouredText}",
                                            "Property": "Foreground",
                                            "Value": "{P3FG}"
                                        },
                                        {
                                            "Condition": "{Item.RaceMajorPositionString, Converter=EmptyObjectToTrue}",
                                            "ConditionAnd": "{StaProgress, Converter=StringNotEquals, Parameter=Points}",
                                            "Setters": [
                                                {
                                                    "Property": "Source",
                                                    "Value": "DNS"
                                                },
                                                {
                                                    "Property": "FontSize",
                                                    "Value": 28
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "BlockType": "shape",
                            "RenderIf": "{ItemIndex, Converter=NumberNotEquals, Parameter=9}",
                            "WidthPercent": 100,
                            "Height": 8,
                            "ShapeOptions": {
                                "Fill": "{White}"
                            }
                        }
                    ],
                    "Triggers": [
                        {
                            "Condition": "{ItemIndex, Converter=NumberIsEven}",
                            "Property": "Background",
                            "Value": "F0F0F0"
                        },
                        {
                            "Condition": "{ItemIndex, Converter=NumberIsOdd}",
                            "Property": "Background",
                            "Value": "E4E4E4"
                        }
                    ]
                }
            },
            {
                "Header": "[P1]",
                "Template": {
                    "RenderIf": "{sta5}",
                    "BlockType": "component",
                    "Component": "DataTableColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "source": "{Item.CountP1, Converter=NumberZeroToEmpty}",
                            "w": 220,
                            "fg": "{MainStandingsFG}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{P1FG}"
                        }
                    ]
                }
            },
            {
                "Header": "[P2]",
                "Template": {
                    "RenderIf": "{sta5}",
                    "BlockType": "component",
                    "Component": "DataTableColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "source": "{Item.CountP2, Converter=NumberZeroToEmpty}",
                            "w": 220,
                            "fg": "{MainStandingsFG}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{P2FG}"
                        }
                    ]
                }
            },
            {
                "Header": "[P3]",
                "Template": {
                    "RenderIf": "{sta5}",
                    "BlockType": "component",
                    "Component": "DataTableColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "source": "{Item.CountP3, Converter=NumberZeroToEmpty}",
                            "w": 220,
                            "fg": "{MainStandingsFG}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{P3FG}"
                        }
                    ]
                }
            },
            {
                "Header": "[TOP 5]",
                "Template": {
                    "RenderIf": "{StaTop5}",
                    "BlockType": "component",
                    "Component": "DataTableColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "source": "{Item.CountTop5, Converter=NumberZeroToEmpty}",
                            "w": 220,
                            "fg": "{MainStandingsFG}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{CountTop5}"
                        }
                    ]
                }
            },
            {
                "Header": "[TOP 10]",
                "Template": {
                    "RenderIf": "{sta6}",
                    "BlockType": "component",
                    "Component": "DataTableColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "source": "{Item.CountTop10, Converter=NumberZeroToEmpty}",
                            "w": 220,
                            "fg": "{MainStandingsFG}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{Top10FG}"
                        }
                    ]
                }
            },
            {
                "Header": "[BEST]",
                "Template": {
                    "RenderIf": "{StaBest}",
                    "BlockType": "component",
                    "Component": "DataTableColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "source": "{Item.BestPos1, Converter=NumberZeroToEmpty}",
                            "w": 220,
                            "fg": "{MainStandingsFG}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{BestPos1}"
                        }
                    ]
                }
            },
            {
                "Header": "[BEST Q]",
                "Template": {
                    "RenderIf": "{StaBestQ}",
                    "BlockType": "component",
                    "Component": "DataTableColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "source": "{Item.BestPos1, Converter=NumberZeroToEmpty}",
                            "w": 220,
                            "fg": "{MainStandingsFG}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{BestPosQual}"
                        }
                    ]
                }
            },
            {
                "Header": "[DOTD]",
                "Template": {
                    "RenderIf": "{sta9}",
                    "BlockType": "component",
                    "Component": "DataTableColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "source": "{Item.RaceDriverDayCount, Converter=NumberZeroToEmpty}",
                            "w": 220,
                            "fg": "{MainStandingsFG}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{DOTDFG}"
                        }
                    ]
                }
            },
            {
                "Header": "[FL]",
                "Template": {
                    "RenderIf": "{sta7}",
                    "BlockType": "component",
                    "Component": "DataTableColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "source": "{Item.RaceFastestLapCount, Converter=NumberZeroToEmpty}",
                            "w": 220,
                            "fg": "{MainStandingsFG}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{FLFG}"
                        }
                    ]
                }
            },
            {
                "Header": "[POLE]",
                "Template": {
                    "RenderIf": "{sta8}",
                    "BlockType": "component",
                    "Component": "DataTableColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "source": "{Item.CountQualP1, Converter=NumberZeroToEmpty}",
                            "w": 220,
                            "fg": "{MainStandingsFG}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{PoleFG}"
                        }
                    ]
                }
            },
            {
                "Header": "[PP]",
                "Template": {
                    "RenderIf": "{sta10}",
                    "BlockType": "component",
                    "Component": "DataTableColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "source": "{Item.PenaltyPoints, Converter=NumberZeroToEmpty}",
                            "w": 220,
                            "fg": "{MainStandingsFG}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{PPFG}"
                        }
                    ]
                }
            },
            {
                "Header": "[DNF]",
                "Template": {
                    "RenderIf": "{sta11}",
                    "BlockType": "component",
                    "Component": "DataTableColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "source": "{Item.CountDnf, Converter=NumberZeroToEmpty}",
                            "w": 220,
                            "fg": "{MainStandingsFG}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{StaColouredText}",
                            "ComponentVar": "fg",
                            "Value": "{DNFFG}"
                        }
                    ]
                }
            },
            {
                "Header": "[{sta12}]",
                "Template": {
                    "BlockType": "component",
                    "Component": "<RDT>",
                    "ComponentOptions": {
                        "Vars": {
                            "source": "{Item.{sta12}, Converter=NumberZeroToEmpty}",
                            "w": 240
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{sta12, Converter=StringEquals, Parameter=PointsToLeaderDiff}",
                            "ComponentVar": "w",
                            "Value": 260
                        }
                    ]
                }
            }
        ]
    }
}