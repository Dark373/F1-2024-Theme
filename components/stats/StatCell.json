{
    "ComponentName": "StatCell",
    "BlockType": "stack",
    "VerticalAlignment": "Center",
    "Items": [
        //time
        {
            "BlockType": "text",
            "MarginTop": 3,
            "RenderIf": false,
            "Width": 150,
            "Height": "*",
            "Padding": "20, 0",
            "Source": "<{data.Value}>",
            "HorizontalAlignment": "Left",
            "VerticalAlignment": "Center",
            "Foreground": "<fg>",
            "TextOptions": {
                "FontName": "{FontNameDefault}",
                "FontSize": 30,
                "HorizontalAlignment": "Center"
            },
            "Triggers": [
                {
                    "Condition": "<{data.Type, Converter=EnumEquals, Parameter=Time}>",
                    "Setters": [
                        {
                            "Property": "RenderIf",
                            "Value": true
                        }
                    ]
                },
                {
                    "Condition": "<{data.Value, Converter=EmptyObjectToTrue}>",
                    "Property": "Source",
                    "Value": "0"
                },
                {
                    "Condition": "<{data.IsHighlighted}>",
                    "Setters": [
                        {
                            "Property": "Foreground",
                            "Value": "{SessionFastestLapFG}"
                        }
                    ]
                },
                {
                    "Condition": "<{data.IsBig}>",
                    "Setters": [
                        {
                            "Property": "FontSize",
                            "Value": "30"
                        }
                    ]
                },
                {
                    "Condition": "<{data.IsSmall}>",
                    "Setters": [
                        {
                            "Property": "FontSize",
                            "Value": "22"
                        }
                    ]
                }
            ]
        },
        //string
        {
            "BlockType": "text",
            "MarginTop": 3,
            "RenderIf": false,
            "Width": "150",
            "Height": "*",
            "Padding": "20, 0",
            "Source": "<{data.Value}>",
            "HorizontalAlignment": "Left",
            "VerticalAlignment": "Center",
