                    ]
                }
            ]
        },
        //rating
        {
            "BlockType": "text",
            "MarginTop": 3,
            "RenderIf": false,
            "Width": 120,
            "Height": "*",
            "Source": "<{data.Value}>",
            "Padding": "20, 0",
            "VerticalAlignment": "Center",
            "Foreground": "<fg>",
            "TextOptions": {
                "FontName": "{FontNameDefault}",
                "FontSize": 30,
                "HorizontalAlignment": "Center",
                "ColorizeRating": {
                    "IsEnabled": "<datalvl>",
                    "Level": "<{data.Level}>"
                }
            },
            "Triggers": [
                {
                    "Condition": "<{data.Type, Converter=EnumEquals, Parameter=Rating}>",
