                        }
                    ]
                }
            ]
        },
        //stints
        {
            "BlockType": "itemstack",
            "Width": 380,
            "Height": "*",
            "Spacing": 4,
            "Padding": "20, 0",
            "ItemStackOptions": {
                "ItemSource": "<{data.Stints}>",
                "ItemTemplate": {
                    "BlockType": "stack",
                    "VerticalAlignment": "Center",
                    "MarginRight": 4,
                    "Spacing": 3,
                    "Items": [
                        {
                            "BlockType": "image",
                            "Height": 36,
                            "VerticalAlignment": "Center",
                            "Source": "tyres/tyres_{Item.Tyres}.png"
                        },
                        {
                            "BlockType": "text",
                            "MarginTop": 3,
                            "Source": "{Item.Laps}",
                            "HorizontalAlignment": "Center",
                            "VerticalAlignment": "Center",
                            "Foreground": "<fg>",
                            "TextOptions": {
                                "FontName": "{FontNameDefault}",
                                "FontSize": 18,
                                "HorizontalAlignment": "Center"
                            },
                            "Triggers": [
                                {
                                    "Condition": "{Item.IsPercentage}",
                                    "Property": "Source",
                                    "Value": "{Item.Percentage, Converter=StringAdd, Parameter=%}"
                                }
                            ]
                        }
                    ]
                }
            }
        },
        //tyres
        {
            "BlockType": "stack",
            "RenderIf": false,
            "Width": 150,
            "Height": "*",
            "VerticalAlignment": "Center",
            "HorizontalAlignment": "Center",
            "Triggers": [
                {
                    "Condition": "<{data.Type, Converter=EnumEquals, Parameter=Tyres}>",
                    "Setters": [
                        {
                            "Property": "RenderIf",
                            "Value": true
                        }
                    ]
                }
            ],
            "Items": [
                {
                    "BlockType": "image",
                    "Source": "tyres/tyres_<{data.Tyres}><t>.png",
                    "VerticalAlignment": "Center",
                    "HorizontalAlignment": "Center",
                    "Height": 38
                },
                {
                    "BlockType": "text",
                    "MarginTop": 3,
                    "MarginLeft": 4,
                    "Source": "<{data.Value}>",
                    "HorizontalAlignment": "Center",
                    "VerticalAlignment": "Center",
                    "Foreground": "<fg>",
                    "TextOptions": {
                        "FontName": "{FontNameDefault}",
                        "FontSize": 19,
                        "HorizontalAlignment": "Center"
                    }
                }
            ]
        },
        //driver short
        {
            "BlockType": "dock",
            "RenderIf": false,
            "Width": 350,
            "Height": "*",
            "Padding": "20, 0",
            "VerticalAlignment": "Center",
            "Triggers": [
                {
                    "Condition": "<{data.Type, Converter=EnumEquals, Parameter=DriverCompact}>",
                    "Setters": [
                        {
                            "Property": "RenderIf",
                            "Value": true
                        }
                    ]
                }
            ],
            "Items": [
                //left part
                {
                    "BlockType": "stack",
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Center",
                    "Items": [
                        //name
                        {
                            "BlockType": "text",
                            "MarginTop": 3,
                            "MaxWidth": 400,
                            "MarginLeft": 8,
                            "Foreground": "<fg>",
                            "Source": "<{data.RawValue.Name}>",
                            "HorizontalAlignment": "Left",
                            "VerticalAlignment": "Center",
                            "FontName": "{FontNameDefault}",
                            "FontSize": 30
                        }
                    ]
                }
            ]
        }
    ]
}