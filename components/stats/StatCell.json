                },
                {
                    "Condition": "<{data.IsSmall}>",
                    "Setters": [
                        {
                            "Property": "FontSize",
                            "Value": "28"
                        }
                    ]
                }
            ]
        },
        //secondary number
        {
            "BlockType": "text",
            "MarginTop": 3,
            "RenderIf": false,
            "Width": 150,
            "Height": "*",
            "Padding": "20, 0",
            "Source": "<{data.Value}>",
            "Foreground": "<fg>",
            "HorizontalAlignment": "Left",
            "VerticalAlignment": "Center",
            "TextOptions": {
                "FontName": "{FontNameDefault}",
                "FontSize": 30,
