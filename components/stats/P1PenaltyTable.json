{
    "ComponentName": "P1PenaltyTable",
    "BlockType": "table",
    "BackgroundImage": "bg/bg.p1.bar.png",
    "ColorizeBackground": {
        "Enabled": true,
        "Color": "{Season.MainLeagueCategory.SecondaryColor}"
    },
    "TableOptions": {
        "ItemsSource": "<itemsource>",
        "OrderByDescending": "{PenOrder}",
        "Limit": 1,
        "HeaderTemplate": {
            "BlockType": "text",
            "Style": "TableSessionHeader"
        },
        "Columns": [
            {
                "Header": "",
                "Template": {
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionP1FG}",
                            "font": "{FontNameItalic}",
                            "w": "45",
                            "pad": "12,0",
                            "source": "{Item.Position}"
                        }
                    }
                }
            },
            {
                "Header": "",
                "Template": {
                    "BlockType": "component",
                    "Component": "V1DriverLine",
                    "WidthStretch": true,
                    "ComponentOptions": {
                        "Vars": {
                            "style1": "P1FirstNameDefault",
                            "style2": "P1SecondNameDefault",
                            "width": "{DriverWidth}"
                        }
                    }
                }
            },
            {
                "Header": "",
                "Template": {
                    "BlockType": "component",
                    "Component": "V1TeamLine",
                    "ComponentOptions": {
                        "Vars": {
                            "bg": "{Item.Team.Color}",
                            "teamstyle": "P1TeamDefault"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.Team.Name, Converter=EmptyObjectToTrue}",
                            "ComponentVar": "bg",
                            "Value": "{Season.MainLeagueCategory.Color}"
                        }
                    ]
                }
            },
            {
                "Header": "",
                "Template": {
                    "RenderIf": "{PenPPA}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionP1FG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "30,0",
                            "source": "{Item.PenaltyPointsActive}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.PenaltyPointsActive, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        }
                    ]
                }
            },
            {
                "Header": "",
                "Template": {
                    "RenderIf": "{PenWA}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionP1FG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "20,0",
                            "source": "{Item.PenaltyWarningsActive}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.PenaltyWarningsActive, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        }
                    ]
                }
            },
            {
                "Header": "",
                "Template": {
                    "RenderIf": "{PenPTS}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionP1FG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "30,0",
                            "source": "{Item.PenaltySeconds}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.PenaltySeconds, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        }
                    ]
                }
            },
            {
                "Header": "",
                "Template": {
                    "RenderIf": "{PenPPS}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionP1FG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "30,0",
                            "source": "{Item.PenaltyPositions}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.PenaltyPositions, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        }
                    ]
                }
            },
            {
                "Header": "",
                "Template": {
                    "RenderIf": "{PenPTG}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionP1FG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "30,0",
                            "source": "{Item.PenaltyIngameSeconds}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.PenaltyIngameSeconds, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        }
                    ]
                }
            },
            {
                "Header": "",
                "Template": {
                    "RenderIf": "{PenPPO}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionP1FG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "30,0",
                            "source": "{Item.PenaltyPointsOverall}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.PenaltyPointsOverall, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        }
                    ]
                }
            },
            {
                "Header": "",
                "Template": {
                    "RenderIf": "{PenWO}",
                    "BlockType": "component",
                    "Component": "MainColumn",
                    "ComponentOptions": {
                        "Vars": {
                            "style": "P1Default",
                            "fg": "{SessionP1FG}",
                            "font": "{FontNameItalic}",
                            "w": "50",
                            "pad": "20,0",
                            "source": "{Item.PenaltyWarningsOverall}"
                        }
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.PenaltyWarningsOverall, Converter=NumberEquals, Parameter=0}",
                            "Property": "Opacity",
                            "Value": 0
                        }
                    ]
                }
            }
        ]
    }
}