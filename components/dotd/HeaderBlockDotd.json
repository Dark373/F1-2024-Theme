{
    "ComponentName": "HeaderBlockDotd",
    "BlockType": "dock",
    "Orientation": "Horizontal",
    "HorizontalAlignment": "Left",
    "Margin": "35, 25, 0, 25",
    "Items": [
        //headerLeft
        {
            "Name": "headerLeftPart",
            "Width": "auto",
            "BlockType": "stack",
            "HorizontalAlignment": "Left",
            "Orientation": "Vertical",
            "Items": [
                //dotd
                {
                    "BlockType": "text",
                    "VerticalAlignment": "Center",
                    "Source": "{Season.Name, Converter=StringToUpperString}",
                    "FontName": "{FontNameBlack}",
                    "FontSize": "{DotdSeasonNameHeaderFS}",
                    "Foreground": "{{g1}}"
                },
                {
                    "BlockType": "text",
                    "VerticalAlignment": "Center",
                    "Source": "[ROUND] {Event.Position, Converter=NumberSubtract, Parameter={cal2}}",
                    "FontName": "{FontNameDefault}",
                    "Foreground": "{{g1}}",
                    "FontSize": "{DotdRoundCountHeaderFS}",
                    "Triggers": [
                        {
                            "Condition": "{Event.IsChampionshipStatus, Converter=BoolReverse}",
                            "Property": "Source",
                            "Value":  "[PRE-SEASON]"
                        }
                    ]
                }
            ]
        }
    ]
}