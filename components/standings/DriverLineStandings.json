{
    "ComponentName": "DriverLineStandings",
    "BlockType": "stack",
    "Orientation": "Vertical",
    "WidthPercent": 100,
    "Items": [
        {
            "BlockType": "dock",
            "VerticalAlignment": "Center",
            "HorizontalAlignment": "Left",
            "WidthPercent": 100,
            "Items": [
                {
                    "BlockType": "dock",
                    "VerticalAlignment": "Center",
                    "Items": [
                        {
                            "BlockType": "dock",
                            "Height": 212,
                            "VerticalAlignment": "Center",
                            "ColorizeBackground": {
                                "Enabled": false,
                                "Color": "F0F0F0"
                            },
                            "Items": [
                                {
                                    "BlockType": "text",
                                    "MarginTop": 8,
                                    "Width": 220,
                                    "Height": 200,
                                    "HorizontalAlignment": "Center",
                                    "Source": "{Item.Position}",
                                    "Style": "NameBlackStandings",
                                    "Foreground": "{Black}",
                                    "VerticalAlignment": "Center",
                                    "FontSize": 100
                                }
                            ],
                            "Triggers": [
                                {
                                    "Condition": "{Item.Position, Converter=NumberEquals, Parameter={g7}}",
                                    "Setters": [
                                        {
                                            "Property": "BackgroundImage",
                                            "Value": "components/bg.position.corner.png"
                                        },
                                        {
                                            "Property": "ColorizeBackground.Enabled",
                                            "Value": true
                                        }
                                    ]
                                },
                                {
                                    "Condition": "{Item.Position, Converter=NumberEquals, Parameter={g6}}",
                                    "Setters": [
                                        {
                                            "Property": "BackgroundImage",
                                            "Value": "components/bg.position.corner2.png"
                                        },
                                        {
                                            "Property": "ColorizeBackground.Enabled",
                                            "Value": true
                                        }
                                    ]
                                },
                                {
                                    "Condition": "{Item.Position, Converter=NumberIsOdd}",
                                    "Property": "ColorizeBackground.Color",
                                    "Value": "F0F0F0"
                                },
                                {
                                    "Condition": "{Item.Position, Converter=NumberIsEven}",
                                    "Property": "ColorizeBackground.Color",
                                    "Value": "E4E4E4"
                                }
                            ]
                        }
                    ],
                    "Triggers": [
                        {
                            "Condition": "{Item.Position, Converter=NumberIsOdd}",
                            "Property": "Background",
                            "Value": "F0F0F0"
                        },
                        {
                            "Condition": "{Item.Position, Converter=NumberIsEven}",
                            "Property": "Background",
                            "Value": "E4E4E4"
                        },
                        {
                            "Condition": "{Item.Position, Converter=NumberEquals, Parameter={g7}}",
                            "ConditionOr": "{Item.Position, Converter=NumberEquals, Parameter={g6}}",
                            "Property": "Background",
                            "Value": "00000000"
                        }
                    ]
                },
                {
                    "BlockType": "stack",
                    "Height": 212,
                    "Spacing": 60,
                    "VerticalAlignment": "Center",
                    "PaddingRight": 20,
                    "Items": [
                        {
                            "BlockType": "image",
                            "Background": "{Item.Team.Color}",
                            "PaddingLeft": 75,
                            "PaddingRight": 85,
                            "Height": 204,
                            "Width": 200,
                            "HorizontalAlignment": "Left",
                            "VerticalAlignment": "Center",
                            "ImageOptions": {
                                "Path": "{Item.Team.LogotypePath}",
                                "HorizontalAlignment": "Center",
                                "VerticalAlignment": "Center"
                            },
                            "Triggers": [
                                {
                                    "Condition": "{g3, Converter=StringNotEquals, Parameter=No Avatars}",
                                    "Property": "Padding",
                                    "Value": "80,4"
                                },
                                {
                                    "Condition": "{Item.Team.Name, Converter=EmptyObjectToTrue}",
                                    "Setters": [
                                        {
                                            "Property": "Background",
                                            "Value": "{Season.MainLeagueCategory.Color}"
                                        },
                                        {
                                            "Property": "Source",
                                            "Value": "logotypes/reserve.png"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "BlockType": "stack",
                            "RenderIf": "{g3, Converter=StringNotEquals, Parameter=No Avatars}",
                            "HorizontalAlignment": "Left",
                            "Margin": "-140,0,0,0",
                            "Padding": "-235,-220",
                            "VerticalAlignment": "Center",
                            "Items": [
                                {
                                    "BlockType": "image",
                                    "Height": 710,
                                    "Margin": "0,-105,0,0",
                                    "VerticalAlignment": "Bottom",
                                    "HorizontalAlignment": "Center",
                                    "Source": "avatars/{Item.Team.Name}_{Item.SeatPosition}.png",
                                    "Triggers": [
                                        {
                                            "Condition": "{g3, Converter=StringEquals, Parameter=Custom Avatars}",
                                            "Property": "Source",
                                            "Value": "{Item.Driver.Name}"
                                        },
                                        {
                                            "Condition": "{Item.Team.Name, Converter=EmptyObjectToTrue}",
                                            "ConditionAnd": "{g3, Converter=StringNotEquals, Parameter=Custom Avatars}",
                                            "Property": "Source",
                                            "Value": "avatars/placeholder1.png"
                                        }
                                    ]
                                }
                            ]
                        }
                    ],
                    "Triggers": [
                        {
                            "Condition": "{Item.Position, Converter=NumberIsOdd}",
                            "Property": "Background",
                            "Value": "F0F0F0"
                        },
                        {
                            "Condition": "{Item.Position, Converter=NumberIsEven}",
                            "Property": "Background",
                            "Value": "E4E4E4"
                        },
                        {
                            "Condition": "{sta13}",
                            "Property": "Background",
                            "Value": "{Item.Team.Color}"
                        },
                        {
                            "Condition": "{Item.Team.Name, Converter=EmptyObjectToTrue}",
                            "ConditionAnd": "{sta13}",
                            "Property": "Background",
                            "Value": "{Season.MainLeagueCategory.Color}"
                        }
                    ]
                },
                {
                    "BlockType": "stack",
                    "Width": "{StandingsDriverLineWidth, Converter=NumberSubtract, Parameter=1007}",
                    "Height": 212,
                    "PaddingRight": 40,
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Center",
                    "Items": [
                        {
                            "BlockType": "component",
                            "Component": "DriverLine",
                            "ComponentOptions": {
                                "Vars": {
                                    "render": "false",
                                    "flagstyle": "DriverFlags",
                                    "Halign": "Left",
                                    "style1": "NameBlackStandings",
                                    "fg1": "{Black}",
                                    "style2": "NameBlackStandings",
                                    "fg2": "{Black}"
                                }
                            },
                            "Triggers": [
                                {
                                    "Condition": "{sta13}",
                                    "Setters": [
                                        {
                                            "ComponentVar": "fg1",
                                            "Value": "{{Item.Team.Name}FG}"
                                        },
                                        {
                                            "ComponentVar": "fg2",
                                            "Value": "{{Item.Team.Name}FG}"
                                        }
                                    ]
                                },
                                {
                                    "Condition": "{Item.Team.Name, Converter=EmptyObjectToTrue}",
                                    "ConditionAnd": "{sta13}",
                                    "Setters": [
                                        {
                                            "ComponentVar": "fg1",
                                            "Value": "{ReserveStandingsFG}"
                                        },
                                        {
                                            "ComponentVar": "fg2",
                                            "Value": "{ReserveStandingsFG}"
                                        }
                                    ]
                                }
                            ]
                        }
                    ],
                    "Triggers": [
                        {
                            "Condition": "{g3, Converter=StringNotEquals, Parameter=No Avatars}",
                            "Property": "Width",
                            "Value": "{StandingsDriverLineWidth, Converter=NumberSubtract, Parameter=1167}"
                        },
                        {
                            "Condition": "{Item.Position, Converter=NumberIsOdd}",
                            "Property": "Background",
                            "Value": "F0F0F0"
                        },
                        {
                            "Condition": "{Item.Position, Converter=NumberIsEven}",
                            "Property": "Background",
                            "Value": "E4E4E4"
                        },
                        {
                            "Condition": "{sta13}",
                            "Property": "Background",
                            "Value": "{Item.Team.Color}"
                        },
                        {
                            "Condition": "{Item.Team.Name, Converter=EmptyObjectToTrue}",
                            "ConditionAnd": "{sta13}",
                            "Property": "Background",
                            "Value": "{Season.MainLeagueCategory.Color}"
                        }
                    ]
                }
            ]
        },
        {
            "BlockType": "shape",
            "RenderIf": "{Item.Position, Converter=NumberNotEquals, Parameter={g6}}",
            "WidthPercent": 100,
            "Height": 3,
            "ShapeOptions": {
                "Fill": "{White}"
            }
        }
    ]
}