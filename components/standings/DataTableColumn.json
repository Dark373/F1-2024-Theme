{
    "ComponentName": "DataTableColumn",
    "Width": "<w>",
    "Height": 215,
    "BlockType": "stack",
    "HorizontalAlignment": "Center",
    "VerticalAlignment": "Center",
    "Orientation": "Vertical",
    "Items": [
        {
            "BlockType": "stack",
            "Height": 215,
            "Orientation": "Vertical",
            "Items": [
                {
                    "BlockType": "text",
                    "Source": "<source>",
                    "Width": "<w>",
                    "Height": 215,
                    "Style": "NameBlackDataTable",
                    "Foreground": "<fg>"
                }
            ]
        },
        {
            "BlockType": "shape",
            "RenderIf": "{Item.Position, Converter=NumberNotEquals, Parameter={g6}}",
            "WidthPercent": 100,
            "Height": 3,
            "ShapeOptions": {
                "Fill": "{White}"
            }
        }
    ],
    "Triggers": [
        {
            "Condition": "{Item.Position, Converter=NumberIsOdd}",
            "Property": "Background",
            "Value": "F0F0F0"
        },
        {
            "Condition": "{Item.Position, Converter=NumberIsEven}",
            "Property": "Background",
            "Value": "E4E4E4"
        }
    ]
}