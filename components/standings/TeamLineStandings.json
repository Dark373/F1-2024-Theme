{
    "ComponentName": "TeamLineStandings",
    "BlockType": "stack",
    "Orientation": "Vertical",
    "WidthPercent": 100,
    "Items": [
        {
            "BlockType": "stack",
            "VerticalAlignment": "Center",
            "HorizontalAlignment": "Left",
            "WidthPercent": 100,
            "Items": [
                {
                    "BlockType": "stack",
                    "HorizontalAlignment": "Center",
                    "VerticalAlignment": "Center",
                    "Items": [
                        {
                            "BlockType": "dock",
                            "VerticalAlignment": "Center",
                            "ColorizeBackground": {
                                "Enabled": false,
                                "Color": "F0F0F0"
                            },
                            "Items": [
                                {
                                    "BlockType": "text",
                                    "MarginTop": 8,
                                    "Width": 220,
                                    "Height": 200,
                                    "HorizontalAlignment": "Center",
                                    "Source": "{Item.Position}",
                                    "Style": "NameBlackStandings",
                                    "Foreground": "{Black}",
                                    "VerticalAlignment": "Center",
                                    "FontSize": 100
                                }
                            ],
                            "Triggers": [
                                {
                                    "Condition": "{Item.Position, Converter=NumberEquals, Parameter=1}",
                                    "Setters": [
                                        {
                                            "Property": "BackgroundImage",
                                            "Value": "components/bg.position.corner.png"
                                        },
                                        {
                                            "Property": "ColorizeBackground.Enabled",
                                            "Value": true
                                        }
                                    ]
                                },
                                {
                                    "Condition": "{Item.Position, Converter=NumberEquals, Parameter=10}",
                                    "Setters": [
                                        {
                                            "Property": "BackgroundImage",
                                            "Value": "components/bg.position.corner2.png"
                                        },
                                        {
                                            "Property": "ColorizeBackground.Enabled",
                                            "Value": true
                                        }
                                    ]
                                },
                                {
                                    "Condition": "{Item.Position, Converter=NumberIsOdd}",
                                    "Property": "ColorizeBackground.Color",
                                    "Value": "F0F0F0"
                                },
                                {
                                    "Condition": "{Item.Position, Converter=NumberIsEven}",
                                    "Property": "ColorizeBackground.Color",
                                    "Value": "E4E4E4"
                                }
                            ]
                        }
                    ],
                    "Triggers": [
                        {
                            "Condition": "{Item.Position, Converter=NumberIsOdd}",
                            "Property": "Background",
                            "Value": "F0F0F0"
                        },
                        {
                            "Condition": "{Item.Position, Converter=NumberIsEven}",
                            "Property": "Background",
                            "Value": "E4E4E4"
                        },
                        {
                            "Condition": "{Item.Position, Converter=NumberEquals, Parameter=1}",
                            "ConditionOr": "{Item.Position, Converter=NumberEquals, Parameter=10}",
                            "Property": "Background",
                            "Value": "00000000"
                        }
                    ]
                },
                {
                    "BlockType": "stack",
                    "Spacing": 60,
                    "Background": "{Item.Team.Color}",
                    "VerticalAlignment": "Center",
                    "PaddingRight": 20,
                    "Items": [
                        {
                            "BlockType": "image",
                            "Padding": "0,4",
                            "PaddingLeft": 75,
                            "PaddingRight": 85,
                            "Height": 200,
                            "Width": 200,
                            "HorizontalAlignment": "Left",
                            "VerticalAlignment": "Center",
                            "ImageOptions": {
                                "Path": "{Item.Team.LogotypePath}",
                                "HorizontalAlignment": "Center",
                                "VerticalAlignment": "Center"
                            },
                            "Triggers": [
                                {
                                    "Condition": "{g3, Converter=StringNotEquals, Parameter=No Avatars}",
                                    "Property": "Padding",
                                    "Value": "80,4"
                                },
                                {
                                    "Condition": "{Item.Team.Name, Converter=EmptyObjectToTrue}",
                                    "Setters": [
                                        {
                                            "Property": "Background",
                                            "Value": "{Season.MainLeagueCategory.Color}"
                                        },
                                        {
                                            "Property": "Source",
                                            "Value": "logotypes/reserve.png"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "BlockType": "stack",
                    "Background": "{Item.Team.Color}",
                    "Width": "{StandingsTeamLineWidth, Converter=NumberSubtract, Parameter=1007}",
                    "Height": "*",
                    "PaddingRight": 40,
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Center",
                    "Items": [
                        {
                            "BlockType": "component",
                            "Component": "TeamLine",
                            "ComponentOptions": {
                                "Vars": {
                                    "Halign": "Left",
                                    "style": "NameBlackStandings",
                                    "fg": "{{Item.Team.Name}FG}"
                                }
                            }
                        }
                    ]
                }
            ]
        },
        {
            "BlockType": "shape",
            "RenderIf": "{Item.Position, Converter=NumberNotEquals, Parameter={g6}}",
            "WidthPercent": 100,
            "Height": 3,
            "ShapeOptions": {
                "Fill": "{White}"
            }
        }
    ]
}