{
    "ComponentName": "DriverLine",
    "BlockType": "dock",
    "VerticalAlignment": "Center",
    "Items": [
        {
            "BlockType": "stack",
            "Spacing": 12,
            "HorizontalAlignment": "<Halign>",
            "VerticalAlignment": "Center",
            "Items": [
                {
                    "BlockType": "image",
                    "RenderIf": "<render>",
                    "Style": "DriverFlags",
                    "ImageOptions": {
                        "Path": "{Item.Driver.Nationality.LogotypePath}"
                    },
                    "Triggers": [
                        {
                            "Trigger": "Flags"
                        }
                    ]
                },
                {
                    "BlockType": "text",
                    "Style": "<style1>",
                    "Foreground": "<fg1>",
                    "Source": "{Item.Driver.{name1}, Converter=StringToUpperString}",
                    "Triggers": [
                        {
                            "Trigger": "Name1"
                        },
                        {
                            "Trigger": "Name2"
                        },
                        {
                            "Trigger": "Name3"
                        }
                    ]
                },
                {
                    "BlockType": "text",
                    "RenderIf": "{name1, Converter=StringEquals, Parameter=Full Name}",
                    "Style": "<style2>",
                    "Foreground": "<fg2>",
                    "Source": "{Item.Driver.RealName, Converter=StringToUpperString}",
                    "Triggers": [
                        {
                            "Trigger": "Name4"
                        }
                    ]
                }
            ]
        }
    ]
}