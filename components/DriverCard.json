{
    "ComponentName": "DriverCard",
    "BlockType": "stack",
    "Orientation": "Vertical",
    "HorizontalAlignment": "Center",
    "Items": [
        {
            "BlockType": "dock",
            "Width": "<w>",
            "Height": "<h>",
            "BackgroundImage": "<bgsource>",
            "ColorizeBackground": {
                "Enabled": true,
                "Color": "{Item.Team.Color}"
            },
            "Items": [
                {
                    "BlockType": "dock",
                    "BackgroundImage": "components/bg.podium.gradient.png",
                    "HeightPercent": 100,
                    "ColorizeBackground": {
                        "Enabled": true,
                        "Color": "{Item.Team.SecondaryColor}"
                    },
                    "Items": [
                        {
                            "BlockType": "text",
                            "Margin": "58,33,0,0",
                            "Source": "<pos>",
                            "FontSize": 378,
                            "FontName": "{FontNameBlack}",
                            "Foreground": "{White}",
                            "HorizontalAlignment": "Left",
                            "VerticalAlignment": "Top"
                        },
                        {
                            "BlockType": "image",
                            "Margin": "<margin>",
                            "HorizontalAlignment": "Center",
                            "VerticalAlignment": "Center",
                            "Height": 1460,
                            "ImageOptions": {
                                "Path": "avatars/{Item.Team.Name}_{Item.SeatPosition}.png"
                            },
                            "Triggers": [
                                {
                                    "Condition": "{g3, Converter=StringEquals, Parameter=Custom Avatars}",
                                    "Property": "ImageOptions.Path",
                                    "Value": "avatars/{Item.Driver.Name}.png"
                                },
                                {
                                    "Condition": "{g3, Converter=StringEquals, Parameter=No Avatars}",
                                    "Setters": [
                                        {
                                            "Property": "ImageOptions.Path",
                                            "Value": "{Item.Team.LightLogotypePath}"
                                        },
                                        {
                                            "Property": "Height",
                                            "Value": "{PodiumDriverCardLogoSize}"
                                        },
                                        {
                                            "Property": "Margin",
                                            "Value": "{PodiumDriverCardLogoMargin}"
                                        },
                                        {
                                            "Property": "PaddingBottom",
                                            "Value": 300
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ],
            "Triggers": [
                {
                    "Condition": "{Item.Team.Name, Converter=EmptyObjectToTrue}",
                    "Property": "ColorizeBackground.Color",
                    "Value": "{Season.MainLeagueCategory.Color}"
                }
            ]
        },
        {
            "BlockType": "dock",
            "Width": "*",
            "Height": 123,
            "BackgroundImage": "components/bg.podium.name.png",
            "ColorizeBackground": {
                "Enabled": true,
                "Color": "{Item.Team.Color}"
            },
            "Items": [
                {
                    "BlockType": "component",
                    "Component": "DriverLinePodium",
                    "ComponentOptions": {
                        "Vars": {
                            "render": "true",
                            "flagstyle": "PodiumFlags",
                            "Halign": "Center",
                            "style1": "NameBlackPodium",
                            "fg1": "{{Item.Team.Name}FG}",
                            "style2": "NameBlackPodium",
                            "fg2": "{{Item.Team.Name}FG}"
                        }
                    }
                }
            ],
            "Triggers": [
                {
                    "Condition": "{Item.Team.Name, Converter=EmptyObjectToTrue}",
                    "Property": "ColorizeBackground.Color",
                    "Value": "{Season.MainLeagueCategory.Color}"
                }
            ]
        }
    ]
}