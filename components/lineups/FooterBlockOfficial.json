{
    "ComponentName": "FooterBlockOfficial",
    "Width": 3840,
    "Height": 527,
    "BlockType": "dock",
    "HorizontalAlignment": "Center",
    "VerticalAlignment": "Center",
    "BackgroundImage": "components/lineup.footer.png",
    "ColorizeBackground": {
        "Enabled": true,
        "Color": "{Season.MainLeagueCategory.Color}"
    },
    "Items": [
        {
            "BlockType": "image",
            "MarginLeft": 50,
            "MarginBottom": 35,
            "Height": 60,
            "HorizontalAlignment": "Left",
            "VerticalAlignment": "Bottom",
            "ImageOptions": {
                "Path": "logotypes/f1_logo.png",
                "VerticalAlignment": "Bottom",
                "HorizontalAlignment": "Left"
            },
            "Triggers": [
                {
                    "Condition": "{Item.Team.Name, Converter=StringEquals, Parameter=Ferrari}",
                    "ConditionAnd": "{g1, Converter=StringEquals, Parameter=Custom Colour}",
                    "Property": "Source",
                    "Value": "logotypes/f1_logo.black.png"
                },
                {
                    "Condition": "{Season.LeagueInfo.LeagueLogo, Converter=EmptyObjectToFalse}",
                    "Setters": [
                        {
                            "Property": "Source",
                            "Value": "{Season.LeagueInfo.LeagueLogo}"
                        },
                        {
                            "Property": "Height",
                            "Value": "{g4}"
                        },
                        {
                            "Property": "MarginLeft",
                            "Value": "{g4, Converter=NumberAdd, Parameter=30}"
                        }
                    ]
                }
            ]
        },
        {
            "BlockType": "text",
            "Margin": "0,0,40,40",
            "Source": "{Season.Name, Converter=StringToUpperString} [DRIVER LINE-UP]",
            "Style": "NameDefault1",
            "FontName": "{FontNameBold}",
            "HorizontalAlignment": "Right",
            "VerticalAlignment": "Bottom",
            "Foreground": "{SeasonSmallFG}"
        }
    ]
}