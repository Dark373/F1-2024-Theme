{
    "ComponentName": "ScheduleEvents",
    "BlockType": "dock",
    "Height": 56,
    "Width": "*",
    "Items": [
        {
            "BlockType": "stack",
            "VerticalAlignment": "Center",
            "Items": [
                {
                    "Name": "Round Count",
                    "BlockType": "dock",
                    "BackgroundImage": "components/event.schedule.png",
                    "Width": 106,
                    "Height": 56,
                    "VerticalAlignment": "Center",
                    "ColorizeBackground": {
                        "Enabled": true,
                        "Color": "{Season.MainLeagueCategory.Color}"
                    },
                    "Items": [
                        {
                            "BlockType": "text",
                            "MarginTop": 3,
                            "HorizontalAlignment": "Center",
                            "VerticalAlignment": "Center",
                            "Source": "R{Item.Position, Converter=NumberSubtract, Parameter={Season.SeasonOverallNumberEvents, Converter=NumberSubtract, Parameter={Season.SeasonOverallNumberEventsExcludingNonChampionship}}}",
                            "Foreground": "{RoundCountFG}",
                            "FontName": "{FontNameBlack}",
                            "FontSize": 35,
                            "Triggers": [
                                {
                                    "Condition": "{Item.IsChampionshipStatus, Converter=BoolReverse}",
                                    "Property": "Source",
                                    "Value": "PRE"
                                }
                            ]
                        }
                    ]
                },
                {
                    "Name": "Nation Flag",
                    "BlockType": "image",
                    "Height": 84,
                    "VerticalAlignment": "Center",
                    "HorizontalAlignment": "Left",
                    "ImageOptions": {
                        "Path": "{Item.Track.Nation.LogotypePath}"
                    },
                    "Triggers": [
                        {
                            "Trigger": "Flags"
                        }
                    ]
                }
            ]
        },
        {
            "BlockType": "stack",
            "HorizontalAlignment": "Left",
            "VerticalAlignment": "Center",
            "Width": "*",
            "Height": 56,
            "Background": "{White}",
            "PaddingLeft": 20,
            "Items": [
                {
                    "Name": "Date",
                    "BlockType": "text",
                    "Padding": "0,5",
                    "Width": 180,
                    "MarginTop": 3,
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Center",
                    "Source": "[{Item.DateLocal, Converter=DateCustomFormat, Parameter=MM} [{Item.DateLocal, Converter=DateToMonthInWords}]]",
                    "FontName": "{FontNameItalic}",
                    "FontSize": 23,
                    "Foreground": "{Black}"
                },
                {
                    "BlockType": "dock",
                    "MarginTop": 3,
                    "VerticalAlignment": "Center",
                    "Items": [
                        {
                            "Name": "CircuitName",
                            "BlockType": "text",
                            "Padding": "0,5",
                            "HorizontalAlignment": "Left",
                            "VerticalAlignment": "Center",
                            "Source": "[{Item.Track.CircuitName, converter=StringToUpperString}]",
                            "FontName": "{FontNameBold}",
                            "FontSize": 23,
                            "Foreground": "{Season.MainLeagueCategory.Color}"
                        },
                        {
                            "BlockType": "stack",
                            "Margin": "120,0,0,0",
                            "VerticalAlignment": "Center",
                            "HorizontalAlignment": "Center",
                            "Spacing": 20,
                            "Items": [
                                {
                                    "Name": "Date 2",
                                    "BlockType": "text",
                                    "Padding": "2,5",
                                    "HorizontalAlignment": "Center",
                                    "VerticalAlignment": "Center",
                                    "Source": "{Item.DateLocal, Converter=DateCustomFormat, Parameter={CalDateFormat}}",
                                    "FontName": "{FontNameItalic}",
                                    "FontSize": 23,
                                    "Foreground": "{Black}"
                                },
                                {
                                    "Name": "Time",
                                    "BlockType": "text",
                                    "Padding": "0,5",
                                    "Width": 90,
                                    "HorizontalAlignment": "Center",
                                    "VerticalAlignment": "Center",
                                    "Source": "{Item.DateLocal, Converter=DateCustomFormat, Parameter={CalTimeFormat}}",
                                    "FontName": "{FontNameItalic}",
                                    "FontSize": 23,
                                    "Foreground": "{Black}"
                                },
                                {
                                    "Name": "Circuit Length",
                                    "RenderIf": "{CalCircuitInfo}",
                                    "BlockType": "text",
                                    "Padding": "2,5",
                                    "Width": 120,
                                    "HorizontalAlignment": "Center",
                                    "VerticalAlignment": "Center",
                                    "Source": "{Item.Track.Length, Converter=NumberGroupWithSeparator, Parameter=.}km",
                                    "FontName": "{FontNameItalic}",
                                    "FontSize": 23,
                                    "Foreground": "{Black}"
                                },
                                {
                                    "Name": "Circuit Record Time",
                                    "RenderIf": "{CalCircuitInfo}",
                                    "BlockType": "text",
                                    "Padding": "2,5",
                                    "Width": 120,
                                    "HorizontalAlignment": "Center",
                                    "VerticalAlignment": "Center",
                                    "Source": "{Item.Track.RaceLapRecordTime}",
                                    "FontName": "{FontNameItalic}",
                                    "FontSize": 23,
                                    "Foreground": "{Black}"
                                },
                                {
                                    "Name": "Circuit Record Driver",
                                    "RenderIf": "{CalCircuitInfo}",
                                    "BlockType": "text",
                                    "Padding": "2,5",
                                    "Width": "{ScheduleRecordDriverLineWidth}",
                                    "HorizontalAlignment": "Left",
                                    "VerticalAlignment": "Center",
                                    "Source": "{Item.Track.RaceLapRecordDriverName}",
                                    "FontName": "{FontNameItalic}",
                                    "FontSize": 23,
                                    "Foreground": "{Black}"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}