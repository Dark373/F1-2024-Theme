{
    "ComponentName": "HeaderBlockCalendar",
    "VerticalAlignment": "Center",
    "MarginLeft": 10,
    "BlockType": "dock",
    "Orientation": "Horizontal",
    "Items": [
        //headerLeft
        {
            "BlockType": "stack",
            "Orientation": "Vertical",
            "Spacing": -10,
            "HorizontalAlignment": "Left",
            "Items": [
                {
                    "Name": "f1-logo",
                    "MarginBottom": 20,
                    "BlockType": "image",
                    "Height": "55",
                    "HorizontalAlignment": "Left",
                    "Source": "logos/f1_logo.png",
                    "RenderIf": "{Season.LeagueInfo.LeagueLogo, Converter=EmptyObjectToTrue}"
                },
                {
                    "Name": "LeagueLogo",
                    "BlockType": "image",
                    "Height": "{LogoSize}",
                    "Width": "auto",
                    "HorizontalAlignment": "Left",
                    "Source": "{Season.LeagueInfo.LeagueLogo}",
                    "RenderIf": "{Season.LeagueInfo.LeagueLogo, Converter=EmptyObjectToFalse}"
                },
                //league name
                {
                    "BlockType": "stack",
                    "VerticalAlignment": "Center",
                    "Items": [
                        {
                            "BlockType": "text",
                            "VerticalAlignment": "Center",
                            "Source": "{Season.ShortName, Converter=StringToUpperString}",
                            "FontName": "{FontNameBlack}",
                            "FontSize": 120,
                            "Foreground": "{Season.MainLeagueCategory.Color}",
                            "Triggers": [
                                {
                                    "Condition": "{cal3, Converter=BoolReverse}",
                                    "Property": "FontSize",
                                    "Value": 114
                                }
                            ]
                        }
                    ]
                },
                //second line
                {
                    "Name": "headerSessionLine",
                    "BlockType": "stack",
                    "VerticalAlignment": "Center",
                    "Items": [
                        {
                            "BlockType": "text",
                            "Foreground": "{Black}",
                            "FontSize": 120,
                            "FontName": "{FontNameBlack}",
                            "Source": "[CALENDAR]",
                            "Triggers": [
                                {
                                    "Condition": "{cal1, Converter=StringEquals, Parameter=DarkBG}",
                                    "ConditionOr": "{cal1, Converter=StringEquals, Parameter=PurpleBG}",
                                    "Property": "Foreground",
                                    "Value": "{White}"
                                },
                                {
                                    "Condition": "{cal3, Converter=BoolReverse}",
                                    "Property": "FontSize",
                                    "Value": 114
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}