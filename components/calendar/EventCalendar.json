{
    "ComponentName": "EventCalendar",
    "BlockType": "stack",
    "StretchWidth": true,
    "Orientation": "Vertical",
    "Padding": "12, 2",
    "Margin": "0,0,0,2",
    "Items": [
        {
            "BlockType": "dock",
            "Orientation": "Horizontal",
            "VerticalAlignment": "Center",
            "Items": [
                {
                    "BlockType": "stack",
                    "HorizontalAlignment": "Left",
                    "Width": 160,
                    "Orientation": "Vertical",
                    "Items": [
                        {
                            "BlockType": "dock",
                            "Orientation": "Horizontal",
                            "Background": "{{g1}}",
                            "Triggers": [
                                {
                                    "Condition": "{g1, Converter=StringEquals, Parameter=Light}",
                                    "ConditionOr": "{Item.CompletedStatus, Converter=StringEquals, Parameter=completed}",
                                    "Property": "Background",
                                    "Value": "1F1F1F"
                                }
                            ],
                            "Items": [
                                {
                                    "BlockType": "dock",
                                    "Orientation": "Horizontal",
                                    "BackgroundImage": "bg/bg.round.png",
                                    "ColorizeBackground": {
                                        "Enabled": true,
                                        "Color": "{Season.MainLeagueCategory.Color}"
                                    },
                                    "Triggers": [
                                        {
                                            "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=completed}",
                                            "Property": "ColorizeBackground.Color",
                                            "Value": "2B2B2B"
                                        }
                                    ],
                                    "Items": [
                                        {
                                            "BlockType": "text",
                                            "Padding": "80, 30",
                                            "Source": "R{Item.Position, Converter=NumberSubtract, Parameter={Season.SeasonOverallNumberEvents, Converter=NumberSubtract, Parameter={Season.SeasonOverallNumberEventsExcludingNonChampionship}}}",
                                            "HorizontalAlignment": "Center",
                                            "VerticalAlignment": "Center",
                                            "FontName": "{FontNameBlack}",
                                            "Foreground": "{RoundCountFG}",
                                            "FontSize": 50,
                                            "Triggers": [
                                                {
                                                    "Condition": "{Item.IsChampionshipStatus, Converter=BoolReverse}",
                                                    "Property": "Source",
                                                    "Value": "PRE"
                                                },
                                                {
                                                    "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=completed}",
                                                    "Property": "Foreground",
                                                    "Value": "606060"
                                                }
                                            ],
                                            "TextOptions": {
                                                "HorizontalAlignment": "Center"
                                            }
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "BlockType": "stack",
                    "Padding": "24, 21",
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Center",
                    "Background": "{{g1}}",
                    "Triggers": [
                        {
                            "Condition": "{g1, Converter=StringEquals, Parameter=Light}",
                            "ConditionOr": "{Item.CompletedStatus, Converter=StringEquals, Parameter=completed}",
                            "Property": "Background",
                            "Value": "1F1F1F"
                        }
                    ],
                    "Items": [
                        //flag
                        {
                            "BlockType": "image",
                            "Height": 100,
                            "Width": 110,
                            "Padding": "1, -16",
                            "VerticalAlignment": "Center",
                            "Background": "{Black}",
                            "ImageOptions": {
                                "Path": "{Item.Track.Nation.LogotypePath}",
                                "VerticalAlignment": "Center"
                            },
                            "Triggers": [
                                {
                                    "Condition": "{Item.Track.Name, Converter=StringEquals, Parameter=TBC}",
                                    "Property": "Source",
                                    "Value": "flags/tbc.png"
                                },
                                {
                                    "Trigger": "Flags"
                                },
                                {
                                    "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=completed}",
                                    "Property": "Opacity",
                                    "Value": 15
                                }
                            ]
                        }
                    ]
                },
                {
                    "PaddingTop": 17,
                    "PaddingRight": 26,
                    "BlockType": "stack",
                    "Width": "*",
                    "Height": "*",
                    "Orientation": "Vertical",
                    "VerticalAlignment": "Center",
                    "Background": "{{g1}}",
                    "Triggers": [
                        {
                            "Condition": "{g1, Converter=StringEquals, Parameter=Light}",
                            "ConditionOr": "{Item.CompletedStatus, Converter=StringEquals, Parameter=completed}",
                            "Property": "Background",
                            "Value": "1F1F1F"
                        }
                    ],
                    "Items": [
                        {
                            "BlockType": "text",
                            "Foreground": "{White}",
                            "Orientation": "Vertical",
                            "FontName": "{FontNameItalic}",
                            "VerticalAlignment": "Center",
                            "FontSize": 24,
                            "Source": "{Item.Date, Converter=DateToDayOfMonth} [{Item.Date, Converter=DateToMonthInWords}]",
                            "Triggers": [
                                {
                                    "Condition": "{g1, Converter=StringNotEquals, Parameter=Light}",
                                    "Property": "Foreground",
                                    "Value": "{Black}"
                                },
                                {
                                    "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=completed}",
                                    "Property": "Foreground",
                                    "Value": "#606060"
                                }
                            ]
                        },
                        {
                            "BlockType": "dock",
                            "Orientation": "Horizontal",
                            "Width": "*",
                            "Items": [
                                {
                                    "BlockType": "text",
                                    "Foreground": "{Season.MainLeagueCategory.Color}",
                                    "HorizontalAlignment": "Left",
                                    "FontName": "{FontNameBlack}",
                                    "FontSize": 32,
                                    "Source": "[{Item.Track.CountryName, converter=StringToUpperString}]",
                                    "Triggers": [
                                        {
                                            "Condition": "{Item.IsChampionshipStatus, Converter=BoolReverse}",
                                            "Property": "Source",
                                            "Value": "PRE-SEASON"
                                        },
                                        {
                                            "Condition": "{Item.Track.Name, Converter=StringEquals, Parameter=TBC}",
                                            "Property": "Source",
                                            "Value": "TBC"
                                        },
                                        {
                                            "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=completed}",
                                            "Property": "Foreground",
                                            "Value": "#474747"
                                        },
                                        {
                                            "Condition": "{Item.Description, Converter=EmptyObjectToFalse}",
                                            "Property": "Source",
                                            "Value": "[{Item.Track.CircuitName, Converter=StringToUpperString}]"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "BlockType": "dock",
                            "Orientation": "Horizontal",
                            "Width": "*",
                            "Items": [
                                {
                                    "BlockType": "text",
                                    "Foreground": "{White}",
                                    "HorizontalAlignment": "Left",
                                    "FontName": "{FontNameBold}",
                                    "FontSize": 24,
                                    "Source": "{Item.Description}",
                                    "Triggers": [
                                        {
                                            "Condition": "{g1, Converter=StringNotEquals, Parameter=Light}",
                                            "Property": "Foreground",
                                            "Value": "{Black}"
                                        },
                                        {
                                            "Condition": "{Item.Track.LocationName, Converter=StringEquals, Parameter=TBC}",
                                            "Property": "Source",
                                            "Value": "TBC"
                                        },
                                        {
                                            "Condition": "{Item.Description, Converter=EmptyObjectToTrue}",
                                            "Property": "Source",
                                            "Value": "[{Item.Track.CircuitName, Converter=StringToUpperString}]"
                                        },
                                        {
                                            "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=completed}",
                                            "Setters": [
                                                {
                                                    "Property": "Foreground",
                                                    "Value": "606060"
                                                },
                                                {
                                                    "Property": "Source",
                                                    "Value": "{Item.WinnerString, Converter=StringToUpperString}"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "BlockType": "itemstack",
                    "Margin": "-26,0,0,0",
                    "Orientation": "Horizontal",
                    "HorizontalAlignment": "Right",
                    "ItemStackOptions": {
                        "ItemSource": "{Item.Races}",
                        "Limit": 1,
                        "Template": {
                            "BlockType": "stack",
                            "Items": [
                                {
                                    "BlockType": "stack",
                                    "Height": 110,
                                    "Width": 100,
                                    "BackgroundImage": "bg/bg.event.info.png",
                                    "ColorizeBackground": {
                                        "Enabled": true,
                                        "Color": "{{g1}}"
                                    },
                                    "Triggers": [
                                        {
                                            "Condition": "{g1, Converter=StringEquals, Parameter=Light}",
                                            "Property": "ColorizeBackground.Color",
                                            "Value": "1F1F1F"
                                        },
                                        {
                                            "Condition": "{Item.RaceType, Converter=StringEquals, Parameter=sprint}",
                                            "Property": "ColorizeBackground.Color",
                                            "Value": "{Season.MainLeagueCategory.Color}"
                                        },
                                        {
                                            "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=completed}",
                                            "Property": "ColorizeBackground.Color",
                                            "Value": "1F1F1F"
                                        }
                                    ],
                                    "Items": [
                                        {
                                            "BlockType": "stack",
                                            "Orientation": "Vertical",
                                            "VerticalAlignment": "Center",
                                            "HorizontalAlignment": "Center",
                                            "Height": 19,
                                            "Width": 110,
                                            "BackgroundImage": "logotypes/sprint.png",
                                            "ColorizeBackground": {
                                                "Enabled": true,
                                                "Color": "{RoundCountFG}"
                                            },
                                            "Triggers": [
                                                {
                                                    "Condition": "{Item.RaceType, Converter=StringNotEquals, Parameter=sprint}",
                                                    "Property": "Opacity",
                                                    "Value": 0
                                                }
                                            ],
                                            "Items": [
                                                {
                                                    "BlockType": "shape",
                                                    "Height": 19,
                                                    "Width": 110,
                                                    "Opacity": 0,
                                                    "ShapeOptions": {
                                                        "Fill": "{White}"
                                                    }
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "BlockType": "shape",
            "Opacity": 0,
            "Width": 745,
            "Height": 1,
            "ShapeOptions": {
                "ShapeType": "rectangle",
                "Fill": "#101010"
            }
        }
    ]
}