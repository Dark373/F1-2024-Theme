{
    "BlockType": "stack",
    "Orientation": "Vertical",
    "ComponentName": "VariableInfoComponent",
    "Items": [
        {
            "BlockType": "stack",
            "Width": 2160,
            "Height": 2700,
            "Orientation": "Vertical",
            "VerticalAlignment": "Center",
            "Items": [
                {
                    "BlockType": "image",
                    "Margin": "0,0,0,0",
                    "HorizontalAlignment": "Center",
                    "VerticalAlignment": "Center",
                    "Height": 3000,
                    "Source": "avatars/{Item.Team.Name}_{Item.SeatPosition}.png",
                    "Triggers": [
                        {
                            "Condition": "{g3, Converter=StringEquals, Parameter=Custom Avatars}",
                            "Property": "Source",
                            "Value": "avatars/{Item.Driver.Name}.png"
                        }
                    ]
                }
            ]
        },
        {
            "BlockType": "dock",
            "Margin": "0,-2700,0,0",
            "Orientation": "Vertical",
            "Width": 2160,
            "Height": 2700,
            "BackgroundImage": "components/bg.pole.gradient.png",
            "ColorizeBackground": {
                "Enabled": true,
                "Color": "{Item.Team.Color}"
            },
            "Triggers": [
                {
                    "Condition": "{g1, Converter=StringNotEquals, Parameter=Custom Colour}",
                    "Property": "ColorizeBackground.Color",
                    "Value": "{{g1}Gradient}"
                }
            ],
            "Items": [
                {
                    "BlockType": "text",
                    "Margin": "0,930,0,0",
                    "Source": "[<source>]",
                    "FontName": "{FontNameBlack}",
                    "FontSize": "<fastestlap>",
                    "Foreground": "{{Item.Team.Name}FG}",
                    "HorizontalAlignment": "Center",
                    "VerticalAlignment": "Center",
                    "Triggers": [
                        {
                            "Condition": "{g1, Converter=StringNotEquals, Parameter=Custom Colour}",
                            "Property": "Foreground",
                            "Value": "{{g1}}"
                        },
                        {
                            "Condition": "{var1, Converter=StringEquals, Parameter=Winner}",
                            "Setters": [
                                {
                                    "Property": "FontSize",
                                    "Value": "<winner>"
                                },
                                {
                                    "Property": "Margin",
                                    "Value": "-2,930,0,0"
                                }
                            ]
                        },
                        {
                            "Condition": "{var1, Converter=StringEquals, Parameter=PodiumP2}",
                            "ConditionOr": "{var1, Converter=StringEquals, Parameter=PodiumP3}",
                            "Property": "FontSize",
                            "Value": "<podium>"
                        },
                        {
                            "Condition": "{var1, Converter=StringEquals, Parameter=Points}",
                            "Setters": [
                                {
                                    "Property": "FontSize",
                                    "Value": "<points>"
                                },
                                {
                                    "Property": "Margin",
                                    "Value": "-10,930,0,0"
                                }
                            ]
                        },
                        {
                            "Condition": "{var1, Converter=StringEquals, Parameter=Position}",
                            "Setters": [
                                {
                                    "Property": "FontSize",
                                    "Value": "<position>"
                                },
                                {
                                    "Property": "Source",
                                    "Value": "P{Item.Position}"
                                },
                                {
                                    "Property": "Margin",
                                    "Value": "-8,930,0,0"
                                }
                            ]
                        }
                    ]
                },
                {
                    "BlockType": "dock",
                    "Spacing": 20,
                    "Margin": "50,0,50,25",
                    "VerticalAlignment": "Bottom",
                    "Items": [
                        {
                            "BlockType": "image",
                            "Height": 85,
                            "Background": "{Black}",
                            "Padding": "1,-13",
                            "HorizontalAlignment": "Left",
                            "VerticalAlignment": "Center",
                            "ImageOptions": {
                                "Path": "{Session.Track.Nation.LogotypePath}"
                            },
                            "Triggers": [
                                {
                                    "Condition": "{Item.Track.CountryName, Converter=StringEquals, Parameter=Saudi Arabia}",
                                    "Property": "Source",
                                    "Value": "flags/saudi_arabia.png"
                                },
                                {
                                    "Condition": "{Item.Track.CountryName, Converter=StringEquals, Parameter=Mexico}",
                                    "Property": "Source",
                                    "Value": "flags/mexico.png"
                                },
                                {
                                    "Condition": "{Item.Track.CountryName, Converter=StringEquals, Parameter=Brazil}",
                                    "Property": "Source",
                                    "Value": "flags/brazil.png"
                                }
                            ]
                        },
                        {
                            "BlockType": "text",
                            "Source": "{Season.Name, Converter=StringToUpperString}",
                            "FontName": "{FontNameBlack}",
                            "FontSize": 50,
                            "Foreground": "{{Item.Team.Name}FG}",
                            "HorizontalAlignment": "Left",
                            "VerticalAlignment": "Center",
                            "Triggers": [
                                {
                                    "Condition": "{g5, Converter=StringEquals, Parameter=Category Name}",
                                    "Property": "Source",
                                    "Value": "{Season.MainLeagueCategory.Name}"
                                },
                                {
                                    "Condition": "{g5, Converter=StringEquals, Parameter=Category Short Name}",
                                    "Property": "Source",
                                    "Value": "{Season.MainLeagueCategory.ShortName}"
                                },
                                {
                                    "Condition": "{g1, Converter=StringNotEquals, Parameter=Custom Colour}",
                                    "Property": "Foreground",
                                    "Value": "{{g1}}"
                                }
                            ]
                        },
                        {
                            "BlockType": "text",
                            "Source": "[{Session.Track.CircuitName, Converter=StringToUpperString} GP]",
                            "FontSize": 50,
                            "Foreground": "{{Item.Team.Name}FG}",
                            "FontName": "{FontNameBlack}",
                            "VerticalAlignment": "Center",
                            "HorizontalAlignment": "Left",
                            "Triggers": [
                                {
                                    "Condition": "{g1, Converter=StringNotEquals, Parameter=Custom Colour}",
                                    "Property": "Foreground",
                                    "Value": "{{g1}}"
                                }
                            ]
                        },
                        {
                            "BlockType": "image",
                            "Height": 140,
                            "HorizontalAlignment": "Center",
                            "VerticalAlignment": "Center",
                            "ImageOptions": {
                                "Path": "{Item.Team.LogotypePath}"
                            }
                        },
                        {
                            "BlockType": "image",
                            "Height": 40,
                            "HorizontalAlignment": "Right",
                            "VerticalAlignment": "Center",
                            "ImageOptions": {
                                "Path": "logotypes/f1_logo.png",
                                "VerticalAlignment": "Center",
                                "HorizontalAlignment": "Right"
                            },
                            "Triggers": [
                                {
                                    "Condition": "{Item.Team.Name, Converter=StringEquals, Parameter=Ferrari}",
                                    "ConditionAnd": "{g1, Converter=StringEquals, Parameter=Custom Colour}",
                                    "Property": "Source",
                                    "Value": "logotypes/f1_logo.black.png"
                                },
                                {
                                    "Condition": "{Season.LeagueInfo.LeagueLogo, Converter=EmptyObjectToFalse}",
                                    "Setters": [
                                        {
                                            "Property": "Source",
                                            "Value": "{Season.LeagueInfo.LeagueLogo}"
                                        },
                                        {
                                            "Property": "Height",
                                            "Value": "{g4}"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}