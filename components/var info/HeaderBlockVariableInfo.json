{
    "ComponentName": "HeaderBlockVariableInfo",
    "BlockType": "dock",
    "Orientation": "Horizontal",
    "HorizontalAlignment": "Center",
    "Margin": "50, 0, 50, 0",
    "Items": [
        {
            "BlockType": "itemstack",
            "HorizontalAlignment": "Center",
            "Orientation": "Horizontal",
            "ItemStackOptions": {
                "ItemSource": "{Session.Drivers}",
                "FilterMember": "IsRaceFastestLap",
                "FilterMemberValue": "True",
                "Limit": 1,
                "ItemTemplate": {
                    "BlockType": "dock",
                    "Width": 2050,
                    "Items": [
                        {
                            "Name": "DriverLine",
                            "BlockType": "dock",
                            "VerticalAlignment": "Center",
                            "Items": [
                                {
                                    "BlockType": "stack",
                                    "Spacing": 12,
                                    "HorizontalAlignment": "Left",
                                    "VerticalAlignment": "Center",
                                    "Items": [
                                        {
                                            "BlockType": "image",
                                            "Style": "DriverFlags",
                                            "ImageOptions": {
                                                "Path": "{Item.Driver.Nationality.LogotypePath}"
                                            }
                                        },
                                        {
                                            "BlockType": "text",
                                            "Style": "NameBlack1",
                                            "Foreground": "{{Item.Team.Name}FG}",
                                            "Source": "{Item.Driver.{name1}}",
                                            "Triggers": [
                                                {
                                                    "Condition": "{name1, Converter=StringEquals, Parameter=Full Name}",
                                                    "Property": "Source",
                                                    "Value": "{Item.Driver.Name, Converter=StringToUpperString}"
                                                },
                                                {
                                                    "Condition": "{name1, Converter=StringEquals, Parameter=Name}",
                                                    "ConditionOr": "{name1, Converter=StringEquals, Parameter=InGameName}",
                                                    "Property": "Source",
                                                    "Value": "{Item.Driver.{name1}}"
                                                },
                                                {
                                                    "Condition": "{name2}",
                                                    "ConditionAnd": "{name1, Converter=StringEquals, Parameter=Full Name}",
                                                    "Property": "Source",
                                                    "Value": "{Item.Driver.RealName, Converter=StringToUpperString}"
                                                },
                                                {
                                                    "Condition": "{g1, Converter=StringNotEquals, Parameter=Custom Colour}",
                                                    "Property": "Foreground",
                                                    "Value": "{{g1}}"
                                                }
                                            ]
                                        },
                                        {
                                            "BlockType": "text",
                                            "RenderIf": "{name1, Converter=StringEquals, Parameter=Full Name}",
                                            "Style": "NameBlack2",
                                            "Foreground": "{{Item.Team.Name}FG}",
                                            "Source": "{Item.Driver.RealName, Converter=StringToUpperString}",
                                            "Triggers": [
                                                {
                                                    "Condition": "{name2}",
                                                    "Property": "Source",
                                                    "Value": "{Item.Driver.Name, Converter=StringToUpperString}"
                                                },
                                                {
                                                    "Condition": "{g1, Converter=StringNotEquals, Parameter=Custom Colour}",
                                                    "Property": "Foreground",
                                                    "Value": "{{g1}}"
                                                }
                                            ]
                                        }
                                    ],
                                    "Triggers": [
                                        {
                                            "Condition": "{var1, Converter=StringEquals, Parameter=Position}",
                                            "Property": "HorizontalAlignment",
                                            "Value": "Center"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            //headerright
                            "Width": "*",
                            "BlockType": "stack",
                            "HorizontalAlignment": "Right",
                            "Orientation": "Horizontal",
                            "Items": [
                                {
                                    "BlockType": "text",
                                    "HorizontalAlignment": "Right",
                                    "VerticalAlignment": "Center",
                                    "Source": "{Item.FastestLapTime}",
                                    "FontName": "{FontNameBlack}",
                                    "FontSize": 70,
                                    "Foreground":  "{{Item.Team.Name}FG}",
                                    "Triggers": [
                                        {
                                            "Condition": "{g1, Converter=StringNotEquals, Parameter=Custom Colour}",
                                            "Property": "Foreground",
                                            "Value": "{{g1}}"
                                        },
                                        {
                                            "Condition": "{var1, Converter=StringEquals, Parameter=Fastest Lap}",
                                            "ConditionAnd": "{Session.IsLiveData}",
                                            "Property": "Source",
                                            "Value": "{Item.FastestLapTime} [ON LAP] {Item.FastestLapNumLap}"
                                        },
                                        {
                                            "Condition": "{var1, Converter=StringEquals, Parameter=Winner}",
                                            "Property": "Source",
                                            "Value": "[P1]"
                                        },
                                        {
                                            "Condition": "{var1, Converter=StringEquals, Parameter=PodiumP2}",
                                            "Property": "Source",
                                            "Value": "[P2]"
                                        },
                                        {
                                            "Condition": "{var1, Converter=StringEquals, Parameter=PodiumP3}",
                                            "Property": "Source",
                                            "Value": "[P3]"
                                        },
                                        {
                                            "Condition": "{var1, Converter=StringEquals, Parameter=Points}",
                                            "Property": "Source",
                                            "Value": "P{Item.Position}"
                                        },
                                        {
                                            "Condition": "{var1, Converter=StringEquals, Parameter=Position}",
                                            "Property": "Source",
                                            "Value": ""
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            },
            "Triggers": [
                {
                    "Condition": "{var1, Converter=StringEquals, Parameter=Winner}",
                    "Setters": [
                        {
                            "Property": "ItemStackOptions.FilterMember",
                            "Value": "IsFinished"
                        },
                        {
                            "Property": "ItemStackOptions.FilterMemberValue",
                            "Value": "True"
                        }
                    ]
                },
                {
                    "Condition": "{var1, Converter=StringEquals, Parameter=PodiumP2}",
                    "Setters": [
                        {
                            "Property": "ItemStackOptions.FilterMember",
                            "Value": "IsFinished"
                        },
                        {
                            "Property": "ItemStackOptions.FilterMemberValue",
                            "Value": "True"
                        },
                        {
                            "Property": "ItemStackOptions.IndexStart",
                            "Value": 1
                        }
                    ]
                },
                {
                    "Condition": "{var1, Converter=StringEquals, Parameter=PodiumP3}",
                    "Setters": [
                        {
                            "Property": "ItemStackOptions.FilterMember",
                            "Value": "IsFinished"
                        },
                        {
                            "Property": "ItemStackOptions.FilterMemberValue",
                            "Value": "True"
                        },
                        {
                            "Property": "ItemStackOptions.IndexStart",
                            "Value": 2
                        }
                    ]
                },
                {
                    "Condition": "{var1, Converter=StringEquals, Parameter=Points}",
                    "ConditionOr": "{var1, Converter=StringEquals, Parameter=Position}",
                    "Setters": [
                        {
                            "Property": "ItemStackOptions.FilterMember",
                            "Value": "IsFinished"
                        },
                        {
                            "Property": "ItemStackOptions.FilterMemberValue",
                            "Value": "True"
                        },
                        {
                            "Property": "ItemStackOptions.IndexStart",
                            "Value": "{var7, Converter=NumberSubtract, Parameter=1}"
                        }
                    ]
                }
            ]
        }
    ]
}