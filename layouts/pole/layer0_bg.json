{
    "BlockRoot": {
        "BlockType": "itemstack",
        "HorizontalAlignment": "Center",
        "Orientation": "Vertical",
        "ItemStackOptions": {
            "ItemSource": "{Session.Drivers}",
            "Limit": 1,
            "ItemTemplate": {
                "BlockType": "stack",
                "Background": "{Item.Team.Color}",
                "Items": [
                    {
                        "BlockType": "image",
                        "Source": "bg/bg.{g1}.png",
                        "Triggers": [
                            {
                                "Condition": "{g2}",
                                "Property": "Source",
                                "Value": "bg/bg.{g1}.plain.png"
                            }
                        ]
                    }
                ]
            }
        }
    }
}