{
    "BlockRoot": {
        "BlockType": "itemstack",
        "Orientation": "Vertical",
        "Width": 2160,
        "Height": 2700,
        "ItemStackOptions": {
            "ItemSource": "{Standings.Drivers}",
            "Limit": 1,
            "ItemTemplate": {
                "BlockType": "stack",
                "Orientation": "Vertical",
                "Items": [
                    {
                        "BlockType": "dock",
                        "HorizontalAlignment": "Center",
                        "VerticalAlignment": "Center",
                        "Items": [
                            {
                                "BlockType": "component",
                                "Component": "HeaderBlockChampion"
                            }
                        ]
                    },
                    {
                        "BlockType": "image",
                        "Margin": "0,-0,0,-395",
                        "HorizontalAlignment": "Center",
                        "VerticalAlignment": "Center",
                        "Height": 3000,
                        "Source": "avatars/{Item.Team.Name}_{Item.SeatPosition}.png",
                        "Triggers": [
                            {
                                "Condition": "{g3, Converter=StringEquals, Parameter=Custom Avatars}",
                                "Property": "Source",
                                "Value": "avatars/{Item.Driver.Name}.png"
                            },
                            {
                                "Condition": "{g3, Converter=StringEquals, Parameter=No Avatars}",
                                "Setters": [
                                    {
                                        "Property": "Source",
                                        "Value": "DriversTrophy.png"
                                    },
                                    {
                                        "Property": "Height",
                                        "Value": 2000
                                    },
                                    {
                                        "Property": "Margin",
                                        "Value": "0,100,0,505"
                                    }
                                ]
                            },
                            {
                                "Condition": "{Item.Team.Name, Converter=EmptyObjectToTrue}",
                                "Property": "Source",
                                "Value": "avatars/Ferrari_0.png"
                            }
                        ]
                    },
                    {
                        "BlockType": "dock",
                        "Margin": "0,-2700,0,0",
                        "Orientation": "Vertical",
                        "HorizontalAlignment": "Center",
                        "Width": 2160,
                        "Height": 2700,
                        "BackgroundImage": "components/bg.pole.gradient.png",
                        "ColorizeBackground": {
                            "Enabled": true,
                            "Color": "{{cha3}}"
                        },
                        "Items": [
                            {
                                "BlockType": "stack",
                                "Width": 2160,
                                "Orientation": "Vertical",
                                "VerticalAlignment": "Bottom",
                                "Items": [
                                    {
                                        "BlockType": "component",
                                        "Margin": "0,2000,0,0",
                                        "Component": "DriverLine",
                                        "ComponentOptions": {
                                            "Vars": {
                                                "render": "false",
                                                "flagstyle": "DriverFlags",
                                                "Halign": "Center",
                                                "fg1": "{ChampColourFG}",
                                                "fg2": "{ChampColourFG}",
                                                "style1": "NameBlack1",
                                                "style2": "NameBlack1"
                                            }
                                        }
                                    },
                                    {
                                        "BlockType": "text",
                                        "Source": "[DRIVERS']",
                                        "FontName": "{FontNameBlack}",
                                        "FontSize": "{ChampTextFS}",
                                        "Foreground": "{ChampColourFG}",
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment": "Center"
                                    },
                                    {
                                        "BlockType": "text",
                                        "Margin": "0,-35,0,0",
                                        "Source": "[CHAMPION]",
                                        "FontName": "{FontNameBlack}",
                                        "FontSize": "{ChampTextFS}",
                                        "Foreground": "{ChampColourFG}",
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment": "Center"
                                    },
                                    {
                                        "BlockType": "dock",
                                        "Margin": "25,0,25,0",
                                        "Orientation": "Horizontal",
                                        "Items": [
                                            {
                                                "BlockType": "image",
                                                "Height": 140,
                                                "HorizontalAlignment": "Left",
                                                "VerticalAlignment": "Center",
                                                "ImageOptions": {
                                                    "Path": "{Item.Team.LogotypePath}"
                                                }
                                            },
                                            {
                                                "BlockType": "text",
                                                "HorizontalAlignment": "Center",
                                                "Source": "{cha1, Converter=StringToUpperString}",
                                                "Style": "NameDefault1",
                                                "Foreground": "{ChampColourFG}"
                                            },
                                            {
                                                "BlockType": "image",
                                                "Height": 40,
                                                "HorizontalAlignment": "Right",
                                                "VerticalAlignment": "Center",
                                                "ImageOptions": {
                                                    "Path": "logotypes/f1_logo.png",
                                                    "VerticalAlignment": "Center",
                                                    "HorizontalAlignment": "Right"
                                                },
                                                "Triggers": [
                                                    {
                                                        "Condition": "{Item.Team.Name, Converter=StringEquals, Parameter=Ferrari}",
                                                        "ConditionAnd": "{g1, Converter=StringEquals, Parameter=Custom Colour}",
                                                        "Property": "Source",
                                                        "Value": "logotypes/f1_logo.black.png"
                                                    },
                                                    {
                                                        "Condition": "{Season.LeagueInfo.LeagueLogo, Converter=EmptyObjectToFalse}",
                                                        "Setters": [
                                                            {
                                                                "Property": "Source",
                                                                "Value": "{Season.LeagueInfo.LeagueLogo}"
                                                            },
                                                            {
                                                                "Property": "Height",
                                                                "Value": "{g4}"
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    }
}