{
    "BlockRoot": {
        "BlockType": "itemstack",
        "Orientation": "Vertical",
        "Width": 2160,
        "Height": 2700,
        "ItemStackOptions": {
            "ItemSource": "{Standings.Drivers}",
            "Limit": 1,
            "ItemTemplate": {
                "BlockType": "stack",
                "Orientation": "Vertical",
                "Items": [
                    {
                        "BlockType": "dock",
                        "Margin": "0,0,0,0",
                        "HorizontalAlignment": "Center",
                        "VerticalAlignment": "Center",
                        "Items": [
                            {
                                "BlockType": "component",
                                "Component": "HeaderBlockChampion"
                            }
                        ]
                    },
                    {
                        "BlockType": "image",
                        "Margin": "0,-0,0,-395",
                        "HorizontalAlignment": "Center",
                        "VerticalAlignment": "Center",
                        "Height": 3000,
                        "Source": "avatars/{Item.Team.Name}_{Item.SeatPosition}.png",
                        "Triggers": [
                            {
                                "Condition": "{g3, Converter=StringEquals, Parameter=Custom Avatars}",
                                "Property": "Source",
                                "Value": "avatars/{Item.Driver.Name}.png"
                            }
                        ]
                    },
                    {
                        "BlockType": "stack",
                        "Margin": "0,-2700,0,0",
                        "Orientation": "Vertical",
                        "HorizontalAlignment": "Center",
                        "Width": 2160,
                        "Height": 2700,
                        "BackgroundImage": "components/bg.pole.gradient.png",
                        "ColorizeBackground": {
                            "Enabled": true,
                            "Color": "{{cha3}}"
                        },
                        "Items": [
                            {
                                "BlockType": "component",
                                "Margin": "0,2100,0,0",
                                "Component": "/DriverLine",
                                "ComponentOptions": {
                                    "Vars": {
                                        "render": "false",
                                        "Halign": "Center",
                                        "fg": "{ChampColourFG}"
                                    }
                                }
                            },
                            {
                                "BlockType": "text",
                                "Source": "[DRIVERS']",
                                "FontName": "{FontNameBlack}",
                                "FontSize": 240,
                                "Foreground": "{ChampColourFG}",
                                "HorizontalAlignment": "Center",
                                "VerticalAlignment": "Center"
                            },
                            {
                                "BlockType": "text",
                                "Margin": "0,-35,0,0",
                                "Source": "[CHAMPION]",
                                "FontName": "{FontNameBlack}",
                                "FontSize": 240,
                                "Foreground": "{ChampColourFG}",
                                "HorizontalAlignment": "Center",
                                "VerticalAlignment": "Center"
                            },
                            {
                                "BlockType": "stack",
                                "HorizontalAlignment": "Center",
                                "Orientation": "Horizontal",
                                "Items": [
                                    {
                                        "BlockType": "text",
                                        "Source": "{cha1, Converter=StringToUpperString}",
                                        "Style": "NameDefault1",
                                        "Foreground": "{ChampColourFG}"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    }
}