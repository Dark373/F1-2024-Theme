{
    "BlockRoot": {
        "BlockType": "stack",
        "Margin": "20,40,20,0",
        "Orientation": "Horizontal",
        "Items": [
            {
                "BlockType": "stack",
                "RenderIf": "{QualDriverCard}",
                "Orientation": "Vertical",
                "Items": [
                    {
                        "BlockType": "itemstack",
                        "HorizontalAlignment": "Center",
                        "Orientation": "Horizontal",
                        "ItemStackOptions": {
                            "ItemSource": "{Session.Drivers}",
                            "Limit": 1,
                            "ItemTemplate": {
                                "BlockType": "component",
                                "Component": "V1DriverCard",
                                "ComponentOptions": {
                                    "Vars": {
                                        "source0": "1",
                                        "source1": "[ST]",
                                        "ftsize": "{1STCardFS}",
                                        "bg": "{Item.Team.Color}",
                                        "teamname": "false",
                                        "teamlogo": "false",
                                        "h": "{SingleSessionDriverCardLength}"
                                    }
                                },
                                "Triggers": [
                                    {
                                        "Condition": "{SessisonStartPos, Converter=NumberEquals, Parameter=11}",
                                        "ComponentVar": "h",
                                        "Value": 1086
                                    },
                                    {
                                        "Condition": "{QualSecondDriverCard, Converter=StringNotEquals, Parameter=Do Not Render}",
                                        "ComponentVar": "h",
                                        "Value": "{DoubleSessionDriverCardLength}"
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "BlockType": "itemstack",
                        "RenderIf": "{QualSecondDriverCard, Converter=StringNotEquals, Parameter=Do Not Render}",
                        "HorizontalAlignment": "Center",
                        "Orientation": "Horizontal",
                        "ItemStackOptions": {
                            "ItemSource": "{Session.Drivers}",
                            "Limit": 1,
                            "IndexStart": "{{QualSecondDriverCard}Index}",
                            "ItemTemplate": {
                                "BlockType": "component",
                                "Component": "V1DriverCard",
                                "ComponentOptions": {
                                    "Vars": {
                                        "source0": "{{QualSecondDriverCard}source0}",
                                        "source1": "{{QualSecondDriverCard}source1}",
                                        "ftsize": "{{QualSecondDriverCard}FS}",
                                        "bg": "{Item.Team.Color}",
                                        "teamname": "false",
                                        "teamlogo": "false",
                                        "h": "{SingleSessionDriverCardLength}"
                                    }
                                },
                                "Triggers": [
                                    {
                                        "Condition": "{SessisonStartPos, Converter=NumberEquals, Parameter=11}",
                                        "ComponentVar": "h",
                                        "Value": 1086
                                    },
                                    {
                                        "Condition": "{QualSecondDriverCard, Converter=StringNotEquals, Parameter=Do Not Render}",
                                        "ComponentVar": "h",
                                        "Value": "{DoubleSessionDriverCardLength}"
                                    }
                                ]
                            }
                        }
                    }
                ]
            },
            {
                "BlockType": "dock",
                "Orientation": "Vertical",
                "Items": [
                    //header block
                    {
                        "MarginBottom": 10,
                        "BlockType": "component",
                        "Component": "headerBlockSession",
                        "ComponentOptions": {
                            "Vars": {
                                "source0": "{Season.LeagueInfo.LeagueShortName, Converter=StringToUpperString} {Season.Name, Converter=StringToUpperString} [{Session.Track.CircuitName, Converter=StringToUpperString} GRAND PRIX] 2024",
                                "source1": "[{Session.SessionType, Converter=StringToUpperString} CLASSIFICATION]",
                                  "logo": "{Season.LeagueInfo.LeagueLogo}"
                            }
                        },
                        "Triggers": [
                            {
                                "Condition": "{g5, Converter=StringEquals, Parameter=Category Name}",
                                "ComponentVar": "source0",
                                "Value": "{Season.LeagueInfo.LeagueShortName, Converter=StringToUpperString} {Season.MainLeagueCategory.Name, Converter=StringToUpperString} [{Session.Track.CircuitName, Converter=StringToUpperString} GRAND PRIX] 2024"
                            },
                            {
                                "Condition": "{g5, Converter=StringEquals, Parameter=Category Short Name}",
                                "ComponentVar": "source0",
                                "Value": "{Season.LeagueInfo.LeagueShortName, Converter=StringToUpperString} {Season.MainLeagueCategory.ShortName, Converter=StringToUpperString} [{Session.Track.CircuitName, Converter=StringToUpperString} GRAND PRIX] 2024"
                            },
                            {
                                "Condition": "{Season.LeagueInfo.LeagueLogo, Converter=EmptyObjectToTrue}",
                                "ComponentVar": "logo",
                                "Value": "{Session.Track.Nation.LogotypePath}"
                            }
                        ]
                    },
                    {
                        "BlockType": "stack",
                        "Background": "{P1BarSecondColor}",
                        "Margin": "0, 15, 0, 0",
                        "Items": [
                            {
                                "BlockType": "component",
                                "Component": "CombinedQualP1Table"
                            }
                        ]
                    },
                    {
                        "BlockType": "stack",
                        "Margin": "0, -108, 0, 0",
                        "Items": [
                            {
                                "BlockType": "component",
                                "Component": "CombinedQualMainTable"
                            }
                        ]
                    },
                    {
                        "BlockType": "stack",
                        "MarginTop": 20,
                        "WidthPercent": 100,
                        "Width": "*",
                        "Background": "{FLFooterBG}",
                        "VerticalAlignment": "Bottom",
                        "Items": [
                            {
                                "ComponentName": "Footer",
                                "RenderIf": "{QualFooter}",
                                "BlockType": "stack",
                                "Padding": "24,21,24,20",
                                "Items": [
                                    {
                                        "Name": "Qualifying",
                                        "BlockType": "stack",
                                        "Margin": "0,8,0,0",
                                        "Spacing": 120,
                                        "Items": [
                                            //quali
                                            {
                                                "Name": "txt1",
                                                "BlockType": "text",
                                                "Source": "[AVAILABLE TYRES:]",
                                                "VerticalAlignment": "Center",
                                                "FontName": "{FontNameDefault}",
                                                "Foreground": "#C5C7C9",
                                                "FontSize": 28
                                            },
                                            {
                                                "Name": "txt1",
                                                "BlockType": "text",
                                                "Source": "[SOFT]",
                                                "VerticalAlignment": "Center",
                                                "FontName": "{FontNameDefault}",
                                                "Foreground": "#E93324",
                                                "FontSize": 28
                                            },
                                            {
                                                "Name": "txt1",
                                                "BlockType": "text",
                                                "Source": "[MEDIUM]",
                                                "VerticalAlignment": "Center",
                                                "FontName": "{FontNameDefault}",
                                                "Foreground": "#F3FD54",
                                                "FontSize": 28
                                            },
                                            {
                                                "Name": "txt1",
                                                "BlockType": "text",
                                                "Source": "[HARD]",
                                                "VerticalAlignment": "Center",
                                                "FontName": "{FontNameDefault}",
                                                "Foreground": "{White}",
                                                "FontSize": 28
                                            },
                                            {
                                                "Name": "txt1",
                                                "BlockType": "text",
                                                "Source": "[INTERMEDIATE]",
                                                "VerticalAlignment": "Center",
                                                "FontName": "{FontNameDefault}",
                                                "Foreground": "#6EBE4F",
                                                "FontSize": 28
                                            },
                                            {
                                                "Name": "txt1",
                                                "BlockType": "text",
                                                "Source": "[WET]",
                                                "VerticalAlignment": "Center",
                                                "FontName": "{FontNameDefault}",
                                                "Foreground": "#518ED4",
                                                "FontSize": 28
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ],
        "Triggers": [
            {
                "Condition": "{RaceDriverCard}",
                "Property": "Margin",
                "Value": "0,40,20,0"
            },
            {
                "Condition": "{QualSecondDriverCard, Converter=StringEquals, Parameter=Do Not Render}",
                "Property": "Margin",
                "Value": "0,30,20,30"
            }
        ]
    }
}
