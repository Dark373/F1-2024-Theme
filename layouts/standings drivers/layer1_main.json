{
    "BlockRoot": {
        "BlockType": "stack",
        "Margin": "68,81,68,81",
        "Orientation": "Vertical",
        "Items": [
            {
                "BlockType": "stack",
                "Width": "{StandingsDriverLineWidth}",
                "Items": [
                    {
                        "BlockType": "component",
                        "Component": "/standings/HeaderBlockStandings",
                        "ComponentOptions": {
                            "Vars": {
                                "source": "[DRIVER]"
                            }
                        }
                    }
                ]
            },
            {
                "BlockType": "stack",
                "VerticalAlignment": "Center",
                "MarginTop": 3,
                "Items": [
                    {
                        "BlockType": "table",
                        "HorizontalAlignment": "Center",
                        "VerticalAlignment": "Center",
                        "TableOptions": {
                            "ItemsSource": "{Standings.Drivers}",
                            "Limit": "{g6}",
                            "IndexStart": "{g7, Converter=NumberSubtract, Parameter=1}",
                            "HeaderTemplate": {
                                "BlockType": "text",
                                "Style": "HeaderStyle"
                            },
                            "Columns": [
                                {
                                    "Header": "",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "/standings/DriverLineStandings"
                                    }
                                },
                                {
                                    "Header": "[{sta1}]",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "Column",
                                        "ComponentOptions": {
                                            "Vars": {
                                                "source": "{Item.{sta1}}",
                                                "style1": "NameBlackPoints"
                                            }
                                        },
                                        "Triggers": [
                                            {
                                                "Condition": "{{sta1}, Converter=EmptyObjectToTrue}",
                                                "Property": "Source",
                                                "Value": "0"
                                            },
                                            {
                                                "Condition": "{Item.Position, Converter=NumberEquals, Parameter={g7}}",
                                                "Setters": [
                                                    {
                                                        "Property": "BackgroundImage",
                                                        "Value": "components/bg.position.corner3.png"
                                                    },
                                                    {
                                                        "Property": "ColorizeBackground.Enabled",
                                                        "Value": true
                                                    }
                                                ]
                                            },
                                            {
                                                "Condition": "{Item.Position, Converter=NumberEquals, Parameter={g6}}",
                                                "Setters": [
                                                    {
                                                        "Property": "BackgroundImage",
                                                        "Value": "components/bg.position.corner4.png"
                                                    },
                                                    {
                                                        "Property": "ColorizeBackground.Enabled",
                                                        "Value": true
                                                    }
                                                ]
                                            },
                                            {
                                                "Condition": "{Item.Position, Converter=NumberNotEquals, Parameter={g7}}",
                                                "ConditionAnd": "{Item.Position, Converter=NumberNotEquals, Parameter={g6}}",
                                                "Property": "Background",
                                                "Value": "{Season.MainLeagueCategory.Color}"
                                            },
                                            {
                                                "Condition": "{sta14}",
                                                "ComponentVar": "style1",
                                                "Value": "NameBlackPointsChamp"
                                            }
                                        ]
                                    }
                                }
                            ]
                        },
                        "Triggers": [
                            {
                                "Condition": "{sta2}",
                                "Property": "Margin",
                                "Value": "0,26,0,26"
                            }
                        ]
                    },
                    {
                        "BlockType": "stack",
                        "RenderIf": "{sta2}",
                        "Items": [
                            {
                                "BlockType": "component",
                                "Component": "/standings/DataTable",
                                "ComponentOptions": {
                                    "Vars": {
                                        "source": "{Standings.Drivers}",
                                        "LDT": "DataTableLeftColumn",
                                        "RDT": "DataTableRightColumn"
                                    }
                                }
                            }
                        ]
                    }
                ],
                "Triggers": [
                    {
                        "Condition": "{sta2, Converter=BoolReverse}",
                        "Property": "MarginTop",
                        "Value": 54
                    }
                ]
            }
        ]
    }
}