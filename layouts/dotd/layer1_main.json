{
    "BlockRoot": {
        "BlockType": "itemstack",
        "Orientation": "Vertical",
        "ItemStackOptions": {
            "ItemSource": "{Session.Drivers}",
            "FilterMember": "IsRaceDriverOfDay",
            "FilterMemberValue": "True",
            "Template": {
                "Name": "mainStack",
                "Width": 1080,
                "Height": 1620,
                "BlockType": "stack",
                "Orientation": "Vertical",
                "Items": [
                    {
                        "BlockType": "stack",
                        "Orientation": "Vertical",
                        "HorizontalAlignment": "Left",
                        "VerticalAlignment": "Top",
                        "Items": [
                            //header block
                            {
                                "BlockType": "component",
                                "Component": "/dotd/HeaderBlockDotd"
                            }
                        ]
                    },
                    {
                        "BlockType": "stack",
                        "HorizontalAlignment": "Center",
                        "Orientation": "Vertical",
                        "Items": [
                            {
                                "BlockType": "stack",
                                "Orientation": "Horizontal",
                                "Items": [
                                    {
                                        "BlockType": "stack",
                                        "Margin": "0, 0, -765, -20",
                                        "BackgroundImage": "components/bg.podium.png",
                                        "ColorizeBackground": {
                                            "Enabled": true,
                                            "Color": "{Item.Team.Color}"
                                        },
                                        "Items": [
                                            {
                                                "BlockType": "stack",
                                                "BackgroundImage": "components/bg.podium.gradient.png",
                                                "ColorizeBackground": {
                                                    "Enabled": true,
                                                    "Color": "{Item.Team.SecondaryColor}"
                                                },
                                                "Items": [
                                                    {
                                                        "BlockType": "image",
                                                        "Width": 780,
                                                        "Height": "auto",
                                                        "Opacity": 0,
                                                        "Source": "components/bg.podium.png",
                                                        "Triggers": [
                                                            {
                                                                "Condition": "{g3, Converter=StringEquals, Parameter=No Avatars}",
                                                                "Property": "Height",
                                                                "Value": 920
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "BlockType": "stack",
                                        "Orientation": "Vertical",
                                        "Margin": "0, 10, 65, -0",
                                        "HorizontalAlignment": "Left",
                                        "VerticalAlignment": "Top",
                                        "Items": [
                                            {
                                                "BlockType": "dock",
                                                "Orientation": "Horizontal",
                                                "HorizontalAlignment": "Left",
                                                "Items": [
                                                    {
                                                        "BlockType": "stack",
                                                        "Width": 700,
                                                        "HorizontalAlignment": "Left",
                                                        "Orientation": "Vertical",
                                                        "Spacing": -10,
                                                        "Items": [
                                                            //dotd
                                                            {
                                                                "BlockType": "text",
                                                                "VerticalAlignment": "Center",
                                                                "Source": "[DRIVER]",
                                                                "FontName": "{FontNameBlack}",
                                                                "FontSize": 80,
                                                                "Foreground": "{White}"
                                                            },
                                                            {
                                                                "BlockType": "text",
                                                                "VerticalAlignment": "Center",
                                                                "Source": "[OF THE]",
                                                                "FontName": "{FontNameBlack}",
                                                                "Foreground": "{White}",
                                                                "FontSize": 80
                                                            },
                                                            {
                                                                "BlockType": "text",
                                                                "VerticalAlignment": "Center",
                                                                "Source": "[DAY]",
                                                                "FontName": "{FontNameBlack}",
                                                                "Foreground": "{White}",
                                                                "FontSize": 80
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "BlockType": "stack",
                                        "VerticalAlignment": "Bottom",
                                        "Orientation": "Vertical",
                                        "Margin": "-780, 40, 0, -671",
                                        "Padding": "-510,0",
                                        "Triggers": [
                                            {
                                                "Condition": "{g3, Converter=StringEquals, Parameter=Default Avatars}",
                                                "ConditionOr": "{g3, Converter=StringEquals, Parameter=Custom Avatars}",
                                                "Property": "RenderIf",
                                                "Value": true
                                            },
                                            {
                                                "Condition": "{g3, Converter=StringEquals, Parameter=No Avatars}",
                                                "Property": "RenderIf",
                                                "Value": false
                                            }
                                        ],
                                        "Items": [
                                            {
                                                "BlockType": "image",
                                                "HorizontalAlignment": "Center",
                                                "VerticalAlignment": "Bottom",
                                                "Height": 1800,
                                                "Width": "auto",
                                                "Source": "avatars/{Item.Team.Name}_{Item.SeatPosition}.png",
                                                "Triggers": [
                                                    {
                                                        "Condition": "{g3, Converter=StringEquals, Parameter=Custom Avatars}",
                                                        "Property": "Source",
                                                        "Value": "avatars/{Item.Driver.Name}.png"
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "BlockType": "stack",
                                        "VerticalAlignment": "Bottom",
                                        "Orientation": "Vertical",
                                        "Margin": "-780, 0, 0, 20",
                                        "RenderIf": "{g3, Converter=StringEquals, Parameter=No Avatars}",
                                        "Items": [
                                            {
                                                "BlockType": "image",
                                                "HorizontalAlignment": "Center",
                                                "VerticalAlignment": "Bottom",
                                                "Height": 700,
                                                "Margin": "0, 0, 80, 0",
                                                "Width": "auto",
                                                "Path": "{Item.Team.LogotypePath}"
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "BlockType": "stack",
                                "Orientation": "Horizontal",
                                "HorizontalAlignment": "Center",
                                "VerticalAlignment": "Center",
                                "Padding": "0,30",
                                "Width": 780,
                                "Height": "auto",
                                "BackgroundImage": "components/bg.podium.name.png",
                                "Spacing": 10,
                                "ColorizeBackground": {
                                    "Enabled": true,
                                    "Color": "{Item.Team.Color}"
                                },
                                "Items": [
                                    {
                                        "BlockType": "image",
                                        "Height": 70,
                                        "Background": "{Black}",
                                        "Padding": "1,-11",
                                        "MarginLeft": 80,
                                        "MarginRight": 10,
                                        "HorizontalAlignment": "Left",
                                        "VerticalAlignment": "Center",
                                        "ImageOptions": {
                                            "Path": "{Session.DriverDayDriver.Nationality.LogotypePath}",
                                            "VerticalAlignment": "Center"
                                        },
                                        "Triggers": [
                                            {
                                                "Condition": "{Item.Track.CountryName, Converter=StringEquals, Parameter=Saudi Arabia}",
                                                "Property": "Source",
                                                "Value": "flags/saudi_arabia.png"
                                            },
                                            {
                                                "Condition": "{Item.Track.CountryName, Converter=StringEquals, Parameter=Mexico}",
                                                "Property": "Source",
                                                "Value": "flags/mexico.png"
                                            },
                                            {
                                                "Condition": "{Item.Track.CountryName, Converter=StringEquals, Parameter=Brazil}",
                                                "Property": "Source",
                                                "Value": "flags/brazil.png"
                                            }
                                        ]
                                    },
                                    {
                                        "BlockType": "stack",
                                        "Spacing": 10,
                                        "Margin": "0,7,0,0",
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "HorizontalAlignment": "Left",
                                                "VerticalAlignment": "Center",
                                                "FontSize": "{DotdNameFontSize}",
                                                "Foreground": "{{Item.Team.Name}FG}",
                                                "FontName": "{FontNameDefault}",
                                                "Source": "{Session.DriverDayDriver.{name1}, Converter=StringToUpperString}",
                                                "Triggers": [
                                                    {
                                                        "Condition": "{name1, Converter=StringEquals, Parameter=Full Name}",
                                                        "Setters": [
                                                            {
                                                                "Property": "MarginTop",
                                                                "Value": 3
                                                            },
                                                            {
                                                                "Property": "Source",
                                                                "Value": "{Session.DriverDayDriver.Name, Converter=StringToUpperString}"
                                                            }
                                                        ]
                                                    },
                                                    {
                                                        "Condition": "{name1, Converter=StringEquals, Parameter=Name}",
                                                        "Setters": [
                                                            {
                                                                "Property": "Source",
                                                                "Value": "{Session.DriverDayDriver.Name}"
                                                            },
                                                            {
                                                                "Property": "MarginTop",
                                                                "Value": 3
                                                            }
                                                        ]
                                                    },
                                                    {
                                                        "Condition": "{name1, Converter=StringEquals, Parameter=RealName}",
                                                        "Property": "FontName",
                                                        "Value": "{FontNameBlack}"
                                                    },
                                                    {
                                                        "Condition": "{name1, Converter=StringEquals, Parameter=In-gameName}",
                                                        "Setters": [
                                                            {
                                                                "Property": "Source",
                                                                "Value": "{Session.DriverDayDriver.InGameName}"
                                                            },
                                                            {
                                                                "Property": "MarginTop",
                                                                "Value": 3
                                                            }
                                                        ]
                                                    },
                                                    {
                                                        "Condition": "{name2}",
                                                        "ConditionAnd": "{name1, Converter=StringEquals, Parameter=FullName}",
                                                        "Property": "Source",
                                                        "Value": "{Session.DriverDayDriver.RealName,  Converter=StringToUpperString}"
                                                    }
                                                ]
                                            },
                                            {
                                                "BlockType": "text",
                                                "RenderIf": "{name1, Converter=StringEquals, Parameter=Full Name}",
                                                "HorizontalAlignment": "Left",
                                                "VerticalAlignment": "Center",
                                                "FontSize": "{DotdNameFontSize}",
                                                "Foreground": "{{Item.Team.Name}FG}",
                                                "FontName": "{FontNameBlack}",
                                                "Source": "{Session.DriverDayDriver.RealName, Converter=StringToUpperString}",
                                                "Triggers": [
                                                    {
                                                        "Condition": "{name2}",
                                                        "ConditionAnd": "{name1, Converter=StringEquals, Parameter=Full Name}",
                                                        "Property": "Source",
                                                        "Value": "{Session.DriverDayDriver.Name, Converter=StringToUpperString}"
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "BlockType": "dock",
                        "VerticalAlignment": "Bottom",
                        "HorizontalAlignment": "Center",
                        "Margin": "35, 45, 0, 25",
                        "Items": [
                            {
                                "BlockType": "image",
                                "Background": "{Black}",
                                "Height": 85,
                                "Padding": "1,-13",
                                "HorizontalAlignment": "Left",
                                "VerticalAlignment": "Center",
                                "ImageOptions": {
                                    "Path": "{Session.Track.Nation.LogotypePath}",
                                    "VerticalAlignment": "Center"
                                },
                                "Triggers": [
                                    {
                                        "Condition": "{Item.Track.CountryName, Converter=StringEquals, Parameter=Saudi Arabia}",
                                        "Property": "Source",
                                        "Value": "flags/saudi_arabia.png"
                                    },
                                    {
                                        "Condition": "{Item.Track.CountryName, Converter=StringEquals, Parameter=Mexico}",
                                        "Property": "Source",
                                        "Value": "flags/mexico.png"
                                    },
                                    {
                                        "Condition": "{Item.Track.CountryName, Converter=StringEquals, Parameter=Brazil}",
                                        "Property": "Source",
                                        "Value": "flags/brazil.png"
                                    }
                                ]
                            },
                            {
                                "BlockType": "text",
                                "MarginLeft": 10,
                                "FontName": "{FontNameItalic}",
                                "FontSize": 26,
                                "Foreground": "{{g1}}",
                                "Source": "{Session.Track.CircuitName}",
                                "HorizontalAlignment": "Left",
                                "VerticalAlignment": "Center"
                            },
                            {
                                "BlockType": "image",
                                "Height": 40,
                                "MarginRight": 0,
                                "HorizontalAlignment": "Center",
                                "VerticalAlignment": "Center",
                                "ImageOptions": {
                                    "Path": "logotypes/f1_logo.white.png",
                                    "VerticalAlignment": "Center"
                                },
                                "Triggers": [
                                    {
                                        "Condition": "{g1, Converter=StringEquals, Parameter=Light}",
                                        "Property": "Source",
                                        "Value": "logotypes/f1_logo.black.png"
                                    },
                                    {
                                        "Condition": "{Season.LeagueInfo.LeagueLogo, Converter=EmptyObjectToFalse}",
                                        "Setters": [
                                            {
                                                "Property": "Source",
                                                "Value": "{Season.LeagueInfo.LeagueLogo}"
                                            },
                                            {
                                                "Property": "Height",
                                                "Value": "{logotypesize}"
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "BlockType": "image",
                                "Height": 100,
                                "Margin": "0, 0, 45, 0",
                                "HorizontalAlignment": "Right",
                                "VerticalAlignment": "Center",
                                "ImageOptions": {
                                    "Path": "{Item.Team.LogotypePath}",
                                    "VerticalAlignment": "Center"
                                }
                            }
                        ]
                    }
                ]
            }
        }
    }
}