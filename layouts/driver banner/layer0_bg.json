{
    "BlockRoot": {
        "BlockType": "itemstack",
        "ItemStackOptions": {
            "ItemSource": "{Lineups.Teams}",
            "Limit": 1,
            "IndexStart": "{ban1, Converter=NumberSubtract, Parameter=1}",
            "ItemTemplate": {
                "BlockType": "stack",
                "Background": "{Item.Team.Color}",
                "Items": [
                    {
                        "BlockType": "image",
                        "Source": "bg/bg.{g1}.png",
                        "Triggers": [
                            {
                                "Condition": "{g2}",
                                "Property": "Source",
                                "Value": "bg/bg.{g1}.plain.png"
                            }
                        ]
                    }
                ]
            }
        }
    }
}